<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_res_partner_bank_form_inherit">
            <field name="name">res.partner.bank.form.inherit</field>
            <field name="model">res.partner.bank</field>
            <field name="inherit_id" ref="base.view_partner_bank_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="acc_holder_name"/>
                </field>
            </field>
        </record>
         
         <record model="ir.ui.view" id="view_res_partner_kanban_inherit">
            <field name="name">res.partner.kanban.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view"/>
            <field name="arch" type="xml">
                
                <field name="function" position="after">
                    <field name="can_sign_invoices" invisible="1"/>
                </field>


                <xpath expr="//div[contains(@class, 'oe_kanban_global_click')]" position="inside">
                    <div t-if="record.can_sign_invoices and record.can_sign_invoices.raw_value and ! record.is_company.raw_value" class="o_widget o_widget_web_ribbon">
                        <div class="ribbon ribbon-top-right">
                            <span class="text-bg-success" title="Firma autorizada" style="text-align: center; padding: 10px; display: block;">Firma<br/>autorizada</span>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="custom_partner_form_view">
            <field name="name">res.partner.custom_form_view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
                <field name="arch" type="xml">
                    <!-- Agregar campos después de 'ref' -->
                    <xpath expr="//field[@name='ref']" position="after">
                        <field name="reeup_code"/>
                        <field name="commercial_registration_number"/>
                        <field name="subordination"/>
                        <field name="accreditation_data"/>
                    </xpath>
                <field name="property_product_pricelist" position="after">
                  <field name="asi_contract" />
                </field>               
                    <!-- Agregar campo después de 'function' -->
                    <xpath expr="//field[@name='function']" position="after">
                        <field name="can_sign_invoices" attrs="{'invisible': [('company_type', '=', 'company')]}"/>
                        <field name="accreditation_sign_invoices_data" attrs="{'invisible': [('company_type', '=', 'company')]}"/>
                    </xpath>
            
                    <!-- Agregar campo en dirección de contacto -->
                    <xpath expr="//page[@name='contact_addresses']/field[@name='child_ids']/form//field[@name='function']" position="after">
                        <field name="can_sign_invoices" attrs="{'invisible': [('type', '!=', 'contact')]}"/>
                        <field name="accreditation_sign_invoices_data" attrs="{'invisible': [('type', '!=', 'contact')]}"/>
                    </xpath>
                      <xpath expr="//field[@name='child_ids']/kanban" position="replace">
                        <kanban>
                            <field name="id"/>
                            <field name="name"/>
                            <field name="type"/>
                            <field name="is_company"/>
                            <field name="image_1920"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="can_sign_invoices"/>
                            <templates>
                                <t t-name="kanban-box">
                                    <div t-attf-class="oe_kanban_global_click oe_kanban_color_#{record.color or 0} #{record.can_sign_invoices and record.can_sign_invoices.raw_value and ! record.is_company.raw_value ? 'can_sign_highlight' : ''}" style="position: relative;">
                                        <div class="o_kanban_image">
                                            <field name="image_1920" widget="image" class="o_kanban_image_inner_pic"/>
                                        </div>
                                        <div class="oe_kanban_details">
                                            <field name="name"/>
                                            <div t-if="record.type.raw_value == 'contact'"><field name="function"/></div>
                                            <div t-if="record.type.raw_value == 'invoice'"><field name="street"/></div>
                                            <div t-if="record.type.raw_value == 'delivery'"><field name="street"/></div>
                                            <div t-if="record.type.raw_value == 'private'"><field name="street"/></div>
                                            <div t-if="record.type.raw_value == 'other'"><field name="street"/></div>
                                            <field name="email"/>
                                            <field name="phone"/>
                                        </div>
                                       <div t-if="record.can_sign_invoices and record.can_sign_invoices.raw_value and ! record.is_company.raw_value" class="sign-badge">Firma autorizada</div>

                                    </div>
                                </t>
                            </templates>
                        </kanban>
                    </xpath>
                </field>
        </record>
    </data>
</odoo>