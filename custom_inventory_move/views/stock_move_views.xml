<odoo>
    <!-- Heredar la vista lista de stock.move.line -->
    <record id="view_stock_move_line_tree_inherited" model="ir.ui.view">
        <field name="name">stock.move.line.tree.inherited</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>  <!-- Vista original de move.line -->
        <field name="arch" type="xml">
            <xpath expr="//field[@name='qty_done']" position="after">
                <field name="remaining_qty" string="Cantidad Restante"/>
            </xpath>
        </field>
    </record>
</odoo>