<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista lista para listas de control - Mejorada -->
    <record id="view_hw_list_tree" model="ir.ui.view">
        <field name="name">it.hw.list.tree</field>
        <field name="model">it.hw.list</field>
        <field name="arch" type="xml">
            <tree decoration-danger="type=='black' and active" 
                  decoration-success="type=='white' and active"
                  decoration-muted="not active">
                <field name="name" string="Nombre de Lista"/>
                <field name="type" widget="selection_badge"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="software_count" string="Software" widget="statinfo"/>
            </tree>
        </field>
    </record>

    <!-- Vista formulario para listas - Mejorada -->
    <record id="view_hw_list_form" model="ir.ui.view">
        <field name="name">it.hw.list.form</field>
        <field name="model">it.hw.list</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Botón para ver software -->
                        <button class="oe_stat_button" type="object" name="action_view_software" 
                                icon="fa-list" string="Software">
                            <field name="software_count" widget="statinfo" string="Software"/>
                        </button>
                        
                        <!-- Botón para verificar conflictos -->
                        <button class="oe_stat_button" type="object" name="action_check_conflicts" 
                                icon="fa-exclamation-triangle" string="Verificar Conflictos"/>
                        
                        <!-- Botón para forzar activación -->
                        <button class="oe_stat_button oe_highlight" type="object" name="action_force_activate" 
                                icon="fa-power-off" string="Forzar Activación"/>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre de la lista" class="oe_inline"/>
                            <span class="ml-2">
                                <field name="type" widget="selection_badge" class="oe_inline"/>
                            </span>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="active" string="Activa"/>
                        </group>
                        <group>
                            <field name="create_date" string="Creada el" readonly="1"/>
                            <field name="write_date" string="Última Modificación" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Software" name="software_tab">
                            <!-- SOLUCIÓN: Corregido el formato de options y context -->
                            <field name="software_ids" widget="many2many_tags" />
                        </page>
                        
                        <page string="Acciones" name="actions_tab">
                            <div class="row mt16">
                                <div class="col-12">
                                    <button name="action_check_compliance" type="object" 
                                            string="Verificar Cumplimiento" 
                                            class="btn-primary" 
                                            icon="fa-check-square-o"/>
                                            
                                    <button name="action_view_related_incidents" type="object" 
                                            string="Ver Incidentes Relacionados" 
                                            class="btn-secondary" 
                                            icon="fa-exclamation-circle"/>
                                </div>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para listas de control -->
    <record id="action_hw_list" model="ir.actions.act_window">
        <field name="name">Listas de Control</field>
        <field name="res_model">it.hw.list</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_type': 'white'}</field>
    </record>
</odoo>