<?xml version="1.0"?>
<odoo>
    <record id="view_software_tree" model="ir.ui.view">
        <field name="name">it.asset.software.tree</field>
        <field name="model">it.asset.software</field>
        <field name="arch" type="xml">
        
            <tree>
                <field name="name"/>
                <field name="version"/>
                <field name="subtype"/>
                <field name="is_authorized"/>
            </tree>
        </field>
    </record>

    <record id="view_software_form" model="ir.ui.view">
        <field name="name">it.asset.software.form</field>

        <field name="model">it.asset.software</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <group>

                        <group string="Datos principales">
                            <field name="name"/>
                            <field name="version"/>
                            <field name="license_key"/>
                            <field name="subtype"/>
                            <field name="os_type"/>
                        </group>

                        <group string="AutorizaciÃ³n">
                            <field name="is_authorized"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Detalles">
                            <field name="description" placeholder="Agregar notas adicionales..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_software" model="ir.actions.act_window">
        <field name="name">Software</field>
        <field name="res_model">it.asset.software</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>