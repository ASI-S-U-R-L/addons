<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_aporte_report_wizard_form" model="ir.ui.view">
        <field name="name">aporte.report.wizard.form</field>
        <field name="model">aporte.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Reporte de Aportes por Período">
                <group>
                    <group>
                        <field name="fecha_desde" required="1"/>
                        <field name="fecha_hasta" required="1"/>
                    </group>
                    <group>
                        <field name="agrupacion" widget="radio" required="1"/>
                        <field name="formato" required="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_generar_reporte" string="Generar Reporte" 
                            type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    
    <record id="action_aporte_report_wizard" model="ir.actions.act_window">
        <field name="name">Reporte de Aportes por Período</field>
        <field name="res_model">aporte.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
    </record>
</odoo>
