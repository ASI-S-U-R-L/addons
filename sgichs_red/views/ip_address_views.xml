<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="it_ip_address_view_tree" model="ir.ui.view">
        <field name="name">it.ip.address.tree</field>
        <field name="model">it.ip.address</field>
        <field name="arch" type="xml">
            <tree string="Direcciones IP">
                <field name="address"/>
                <field name="description"/>
                <field name="hardware_count"/>
            </tree>
        </field>
    </record>

    <record id="it_ip_address_view_form" model="ir.ui.view">
        <field name="name">it.ip.address.form</field>
        <field name="model">it.ip.address</field>
        <field name="arch" type="xml">
            <form string="DirecciÃ³n IP">
                <sheet>
                    <group>
                        <field name="address"/>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Hardware Asignado">
                            <field name="hardware_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_it_ip_address" model="ir.actions.act_window">
        <field name="name">Direcciones IP</field>
        <field name="res_model">it.ip.address</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>