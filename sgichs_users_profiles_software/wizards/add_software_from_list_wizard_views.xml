<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_profile_add_software_wizard_form" model="ir.ui.view">
        <field name="name">profile.add.software.wizard.form</field>
        <field name="model">profile.add_software.wizard</field>
        <field name="arch" type="xml">
            <form string="Añadir Software desde Lista Blanca">
                <group>
                    <field name="whitelist_id" options="{'no_create': True, 'no_create_edit': True}"/>
                </group>
                <footer>
                    <button name="action_add_software" string="Añadir Software" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_profile_add_software_wizard" model="ir.actions.act_window">
        <field name="name">Añadir desde Lista Blanca</field>
        <field name="res_model">profile.add_software.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>