<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="ir_cron_check_certificate_expiration" model="ir.cron">
        <field name="name">Verificar Expiraci√≥n de Certificados P12</field>
        <field name="model_id" ref="model_res_users" />
        <field name="state">code</field>
        <field name="code">model._cron_check_certificate_expiration()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="user_id" ref="base.user_root" />
        <field name="nextcall"
            eval="(DateTime.now() + timedelta(days=1)).replace(hour=9, minute=0, second=0)" />
    </record>
</odoo>