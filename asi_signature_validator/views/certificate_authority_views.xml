<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ================================================================= -->
    <!-- VISTAS PARA ENTIDADES CERTIFICADORAS                              -->
    <!-- ================================================================= -->

    <!-- Vista de árbol (lista) -->
    <record id="view_certificate_authority_tree" model="ir.ui.view">
        <field name="name">asi.certificate.authority.tree</field>
        <field name="model">asi.certificate.authority</field>
        <field name="arch" type="xml">
            <tree string="Entidades Certificadoras" default_order="sequence, name">
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="subject_cn" />
                <field name="subject_org" />
                <field name="issuer_cn" />
                <field name="valid_until" />
                <field name="is_expired" widget="boolean" />
                <field name="is_self_signed" widget="boolean" />
                <field name="active" widget="boolean" />
            </tree>
        </field>
    </record>

    <!-- Vista de formulario -->
    <record id="view_certificate_authority_form" model="ir.ui.view">
        <field name="name">asi.certificate.authority.form</field>
        <field name="model">asi.certificate.authority</field>
        <field name="arch" type="xml">
            <form string="Entidad Certificadora">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                            class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                options='{"terminology": "active"}' />
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre de la CA..." />
                        </h1>
                    </div>

                    <group>
                        <group string="Certificado">
                            <field name="certificate_file" filename="certificate_filename" />
                            <field name="certificate_filename" invisible="1" />
                            <field name="sequence" />
                        </group>
                        <group string="Estado">
                            <field name="is_expired" readonly="1" />
                            <field name="is_self_signed" readonly="1" />
                            <field name="company_id" groups="base.group_multi_company" />
                        </group>
                    </group>

                    <notebook>
                        <page string="Información del Certificado" name="cert_info">
                            <group>
                                <group string="Sujeto">
                                    <field name="subject_cn" readonly="1" />
                                    <field name="subject_org" readonly="1" />
                                </group>
                                <group string="Emisor">
                                    <field name="issuer_cn" readonly="1" />
                                    <field name="serial_number" readonly="1" />
                                </group>
                            </group>
                            <group string="Período de Validez">
                                <field name="valid_from" readonly="1" />
                                <field name="valid_until" readonly="1" />
                            </group>
                        </page>
                        <page string="Notas" name="notes">
                            <field name="notes"
                                placeholder="Notas adicionales sobre esta entidad certificadora..." />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="view_certificate_authority_search" model="ir.ui.view">
        <field name="name">asi.certificate.authority.search</field>
        <field name="model">asi.certificate.authority</field>
        <field name="arch" type="xml">
            <search string="Buscar Entidades Certificadoras">
                <field name="name" />
                <field name="subject_cn" />
                <field name="subject_org" />
                <field name="issuer_cn" />
                <filter string="Activas" name="active" domain="[('active', '=', True)]" />
                <filter string="Expiradas" name="expired"
                    domain="[('valid_until', '&lt;', context_today().strftime('%Y-%m-%d'))]" />
                <filter string="Autofirmadas (Raíz)" name="self_signed"
                    domain="[('is_self_signed', '=', True)]" />
                <separator />
                <filter string="Archivadas" name="inactive" domain="[('active', '=', False)]" />
                <group expand="0" string="Agrupar por">
                    <filter string="Emisor" name="group_issuer" context="{'group_by': 'issuer_cn'}" />
                    <filter string="Organización" name="group_org"
                        context="{'group_by': 'subject_org'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de ventana -->
    <record id="action_certificate_authority" model="ir.actions.act_window">
        <field name="name">Entidades Certificadoras</field>
        <field name="res_model">asi.certificate.authority</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_certificate_authority_search" />
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Agregue una Entidad Certificadora
            </p>
            <p>
                Las Entidades Certificadoras (CA) son las organizaciones que emiten
                certificados digitales. Agregue aquí los certificados .crt de las CAs
                de confianza para validar firmas digitales contra ellas.
            </p>
        </field>
    </record>

    <!-- ================================================================= -->
    <!-- MENÚ DIRECTO EN AJUSTES (más accesible)                  -->
    <!-- ================================================================= -->

    <!-- Menú principal en Ajustes > Técnico -->
    <menuitem id="menu_signature_validator_config"
        name="Validador de Firmas"
        parent="base.menu_administration"
        sequence="100"
        groups="base.group_system" />

    <menuitem id="menu_certificate_authority"
        name="Entidades Certificadoras (CA)"
        parent="menu_signature_validator_config"
        action="action_certificate_authority"
        sequence="10"
        groups="base.group_system" />

</odoo>