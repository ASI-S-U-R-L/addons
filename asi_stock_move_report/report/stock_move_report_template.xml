<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Definición del reporte -->
    <record id="action_report_stock_move" model="ir.actions.report">
        <field name="name">Reporte de Movimientos de Inventario</field>
        <field name="model">stock.move.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">asi_stock_move_report.stock_move_report_template</field>
        <field name="report_file">asi_stock_move_report.stock_move_report_template</field>
        <field name="binding_model_id" ref="model_stock_move_report_wizard"/>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
        <field name="print_report_name">data.get('report_filename', 'Movimientos_Inventario') + '.pdf'</field>
    </record>

    <!-- Template del reporte -->
    <template id="stock_move_report_template">
        <t t-call="web.html_container">
            <div class="article">
                <div class="page" style="font-size: 12px;">
                    
                    <!-- Logo de la compañía arriba de la tabla -->
                    <div class="row mb-3">
                        <div class="col-12 text-right">
                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 80px; max-width: 200px;" alt="Logo"/>
                        </div>
                    </div>

                    <!-- Encabezado del reporte -->
                    <div class="row mb-3">
                        <div class="col-12">
                            <h2 style="margin-bottom: 15px; font-size: 18px;">
                                <strong>REPORTE DE MOVIMIENTOS DE INVENTARIO</strong>
                            </h2>
                            <h4 style="margin-bottom: 20px; font-size: 14px;">
                                <t t-esc="company.name"/>
                            </h4>
                        </div>
                    </div>

                    <!-- Información del almacén -->
                    <div class="row mb-4" style="margin-bottom: 10px;">
                        <div class="col-12">
                            <strong style="font-size: 12px;">Almacén:</strong>
                            <span t-esc="warehouse.name if warehouse else 'Todos los almacenes'" style="font-size: 12px;"/>
                        </div>
                    </div>

                    <!-- Información del período -->
                    <div class="row mb-4" style="margin-bottom: 10px;">
                        <div class="col-12">
                            <strong style="font-size: 12px;">Período:</strong>
                            <span t-esc="inicio" t-options="{'widget': 'date'}" style="font-size: 12px;"/>
                            <span style="font-size: 12px;"> al </span>
                            <span t-esc="date_end" t-options="{'widget': 'date'}" style="font-size: 12px;"/>
                        </div>
                    </div>

                    <!-- Tabla principal de movimientos consolidados con bordes -->
                    <table class="table table-sm" style="font-size: 12px; border-collapse: collapse; border: 2px solid #000; width: 100%;">
                        <thead style="background-color: #f8f9fa;">
                            <tr>
                                <th class="text-center" style="width: 10%; border: 1px solid #000; padding: 10px; font-size: 12px;">Referencia Interna</th>
                                <th class="text-center" style="width: 26%; border: 1px solid #000; padding: 10px; font-size: 12px;">Nombre</th>
                                <th class="text-center" style="width: 10%; border: 1px solid #000; padding: 10px; font-size: 12px;">Unidad de Medida</th>
                                <th class="text-center" style="width: 8%; border: 1px solid #000; padding: 10px; font-size: 12px;">Cantidad de Movimientos</th>
                                <th class="text-center" style="width: 12%; border: 1px solid #000; padding: 10px; font-size: 12px;">Existencia Inicial</th>
                                <th class="text-center" style="width: 9%; border: 1px solid #000; padding: 10px; font-size: 12px;">Entradas</th>
                                <th class="text-center" style="width: 9%; border: 1px solid #000; padding: 10px; font-size: 12px;">Ventas</th>
                                <th class="text-center" style="width: 9%; border: 1px solid #000; padding: 10px; font-size: 12px;">Otras Salidas</th>
                                <th class="text-center" style="width: 9%; border: 1px solid #000; padding: 10px; font-size: 12px;">Consumo</th>
                                <th class="text-center" style="width: 10%; border: 1px solid #000; padding: 10px; font-size: 12px;">EXISTENCIA FINAL</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="products_data" t-as="product">
                                <tr>
                                    <td class="text-center" style="border: 1px solid #000; padding: 8px; font-size: 12px;">
                                        <span t-esc="product['product_code']"/>
                                    </td>
                                    <td style="border: 1px solid #000; padding: 8px; font-size: 12px;">
                                        <span t-esc="product['product_name']"/>
                                    </td>
                                    <td class="text-center" style="border: 1px solid #000; padding: 8px; font-size: 12px;">
                                        <span t-esc="product['product_uom']"/>
                                    </td>
                                    <td class="text-center" style="border: 1px solid #000; padding: 8px; font-size: 12px;">
                                        <span t-esc="product['cantidad_movimientos']"/>
                                    </td>
                                    <td class="text-right" style="border: 1px solid #000; padding: 8px; font-size: 12px;">
                                        <span t-esc="'{:g}'.format(product['cantidad_a_mano'])"/>
                                    </td>
                                    <td class="text-right" style="border: 1px solid #000; padding: 8px; font-size: 12px;">
                                        <span t-esc="'{:g}'.format(product['entradas'])"/>
                                    </td>
                                    <td class="text-right" style="border: 1px solid #000; padding: 8px; font-size: 12px;">
                                        <span t-esc="'{:g}'.format(product['ventas'])"/>
                                    </td>
                                    <td class="text-right" style="border: 1px solid #000; padding: 8px; font-size: 12px;">
                                        <span t-esc="'{:g}'.format(product['otras_salidas'])"/>
                                    </td>
                                    <td class="text-right" style="border: 1px solid #000; padding: 8px; font-size: 12px;">
                                        <span t-esc="'{:g}'.format(product['consumo'])"/>
                                    </td>
                                    <td class="text-right" style="font-weight: bold; border: 1px solid #000; padding: 8px; font-size: 12px;">
                                        <span t-esc="'{:g}'.format(product['existencia_final'])"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <!-- Resumen estadístico -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <h5 style="font-size: 14px;"><strong>Resumen del Período</strong></h5>
                            <div class="row">
                                <div class="col-6">
                                    <strong style="font-size: 12px;">Total de Productos con Movimientos:</strong>
                                    <span t-esc="total_products_with_movements" style="font-size: 12px;"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <strong style="font-size: 12px;">Total de Movimientos:</strong>
                                    <span t-esc="total_movements" style="font-size: 12px;"/>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            
            <div class="footer" style="border-top: 0px; margin-top: 20px;">
                <div class="text-center" style="font-size: 12px;">
                    Página <span class="page"/> de <span class="topage"/>
                </div>
            </div>
        </t>
    </template>

</odoo>
