<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_inventory_summary_wizard_id" model="ir.actions.act_window">
        <field name="name">Resumen de Inventario</field>
        <field name="res_model">inventory.summary.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Añadimos nuestro menú de ventas como submenú -->
    <menuitem id="menu_inventory_summary_reports"
        name="Resumen de Inventario"
        action="action_inventory_summary_wizard_id"
        parent="point_of_sale.menu_point_rep"
        sequence="20" />

    <!-- Added new menu item for merchandise sales by date -->
    <menuitem id="menu_pos_merchandise_by_date_reports"
        name="Ventas por Mercancías"
        action="asi_pos_reports.action_pos_merchandise_report_by_date_wizard"
        parent="point_of_sale.menu_point_rep"
        sequence="21" />

    <!-- Added new menu item for shift balance report -->
    <menuitem id="menu_pos_shift_balance_reports"
        name="Balance de Turno"
        action="asi_pos_reports.action_pos_shift_balance_wizard"
        parent="point_of_sale.menu_point_rep"
        sequence="22" />

    <!-- Added new menu item for coins report -->
    <menuitem id="menu_pos_coins_reports"
        name="Monedas"
        action="asi_pos_reports.action_pos_coins_report_wizard"
        parent="point_of_sale.menu_point_rep"
        sequence="23" />
</odoo>