<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista del formulario del wizard de Reporte de Monedas -->
    <record id="view_pos_coins_report_wizard_form" model="ir.ui.view">
        <field name="name">pos.coins.report.wizard.form</field>
        <field name="model">pos.coins.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Reporte de Monedas">
                <group>
                    <group>
                        <field name="pos_config_id"
                            options="{'no_create': True, 'no_open': True}" />
                        <field name="report_date" />
                    </group>
                    <group>
                        <field name="available_session_ids" invisible="1" />
                        <field name="session_id"
                            domain="[('id', 'in', available_session_ids)]"
                            options="{'no_create': True, 'no_open': True}" />
                    </group>
                </group>
                <footer>
                    <button name="action_generate_pdf"
                        string="Generar Reporte PDF"
                        type="object"
                        class="btn-primary" />
                    <button name="action_generate_excel"
                        string="Generar Reporte Excel"
                        type="object"
                        class="btn-success" />
                    <button name="action_preview_ticket"
                        string="Previsualizar Ticket"
                        type="object"
                        class="btn-info" />
                    <button name="action_print_ticket"
                        string="Imprimir Ticket"
                        type="object"
                        class="btn-secondary" />
                    <button string="Cancelar"
                        class="btn-secondary"
                        special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n para abrir el wizard -->
    <record id="action_pos_coins_report_wizard" model="ir.actions.act_window">
        <field name="name">Reporte de Monedas</field>
        <field name="res_model">pos.coins.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>