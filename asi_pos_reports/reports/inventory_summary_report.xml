<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Reporte PDF principal -->
    <record id="action_report_inventory_summary" model="ir.actions.report">
        <field name="name">Resumen de Inventario</field>
        <field name="model">inventory.summary.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">asi_pos_reports.report_inventory_summary_template</field>
        <field name="report_file">asi_pos_reports.report_inventory_summary_template</field>
        <field name="binding_model_id" ref="model_inventory_summary_wizard" />
        <field name="binding_type">report</field>
    </record>

    <!-- Template principal del reporte with right-aligned numbers and thousand separators -->
    <template id="report_inventory_summary_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page" style="font-size: 11pt;">
                    <t t-foreach="docs" t-as="wizard">
                        <t t-set="data" t-value="wizard._get_inventory_data()" />

                        <div style="margin-bottom: 20px;">
                            <h3 style="margin: 0 0 5px 0; font-weight: 600;">Resumen de Inventario</h3>
                            <div style="font-size: 10pt; color: #666;">
                                <div>
                                    <strong>Fecha:</strong>
                                    <span t-esc="data['report_date'].strftime('%d/%m/%Y %H:%M')" />
                                </div>
                                <div>
                                    <strong>Entidades:</strong>
                                    <span t-esc="', '.join(data['warehouse_names'])" />
                                </div>
                                <div>
                                    <strong>Total productos:</strong>
                                    <span t-esc="data['total_products']"
                                        t-options="{'widget': 'integer'}" />
                                </div>
                            </div>
                        </div>

                        <t t-if="data['categories_data']">
                            <t t-foreach="data['categories_data'].items()" t-as="category_item">
                                <t t-set="category_name" t-value="category_item[0]" />
                                <t t-set="category_products" t-value="category_item[1]" />

                                <div style="margin-top: 15px;">
                                    <div
                                        style="background: #f5f5f5; padding: 5px 8px; font-weight: 600; font-size: 10pt; margin-bottom: 5px;"
                                        t-esc="category_name" />
                                    <table
                                        style="width: 100%; border-collapse: collapse; font-size: 10pt;">
                                        <thead>
                                            <tr style="border-bottom: 1px solid #ddd;">
                                                <th
                                                    style="padding: 5px; text-align: left; font-weight: 600; width: 100px;">
                                                    Código</th>
                                                <th
                                                    style="padding: 5px; text-align: left; font-weight: 600;">
                                                    Producto</th>
                                                <th
                                                    style="padding: 5px; text-align: right; font-weight: 600; width: 80px;">
                                                    Unidad</th>
                                                <th
                                                    style="padding: 5px; text-align: right; font-weight: 600; width: 100px;">
                                                    Cantidad</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <!-- Agregado separador de miles con t-options -->
                                            <t t-foreach="category_products" t-as="product">
                                                <tr style="border-bottom: 1px solid #eee;">
                                                    <td style="padding: 5px;"
                                                        t-esc="product['product_code']" />
                                                    <td style="padding: 5px;"
                                                        t-esc="product['product_name']" />
                                                    <td style="padding: 5px; text-align: right;"
                                                        t-esc="product['uom_symbol']" />
                                                    <td
                                                        style="padding: 5px; text-align: right; font-weight: 600;">
                                                        <span t-esc="product['quantity']"
                                                            t-options="{'widget': 'float', 'precision': 2}" />
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                        <tfoot>
                                            <tr style="background: #f9f9f9;">
                                                <td colspan="3"
                                                    style="padding: 5px; font-weight: 600;">Subtotal <span
                                                        t-esc="category_name" /></td>
                                                <td
                                                    style="padding: 5px; text-align: right; font-weight: 600;">
                                                    <t t-set="category_total"
                                                        t-value="sum(p['quantity'] for p in category_products)" />
                                                    <span t-esc="category_total"
                                                        t-options="{'widget': 'float', 'precision': 2}" />
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </t>

                            <div
                                style="margin-top: 20px; padding: 10px; background: #f5f5f5; text-align: right;">
                                <span style="font-size: 12pt; font-weight: 600;"> TOTAL PRODUCTOS: <span
                                        t-esc="data['total_products']"
                                        t-options="{'widget': 'integer'}" />
                                </span>
                            </div>
                        </t>

                        <t t-else="">
                            <div style="text-align: center; margin-top: 40px; color: #999;">
                                <p>No se encontraron productos en inventario</p>
                            </div>
                        </t>
                    </t>
                </div>
            </t>
        </t>
    </template>

    <!-- Template para previsualización de ticket usando el mismo patrón que funcionó -->
    <template id="report_inventory_ticket_preview_template">
        <t t-call="web.html_container">
            <t t-call="asi_pos_reports.report_blank_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="wizard">
                        <t t-set="data" t-value="wizard._get_inventory_data()" />
                        <div
                            style="max-width: 300px; margin: 0 auto; font-family: 'Courier New', monospace; border: 2px dashed #ccc; padding: 20px; background-color: #f9f9f9;">
                            <div style="text-align: center;">
                                <div style="font-weight: bold; margin-bottom: 5px;">INVENTARIO POR
                                    ARTÍCULOS Y GRUPO</div>
                                <div style="margin: 2px 0;">============================</div>
                                <div style="margin: 2px 0;"
                                    t-esc="data['report_date'].strftime('%d/%m/%Y %H:%M')" />
                                <div style="margin: 2px 0;">Entidad/es: <span
                                        t-esc="', '.join(data['warehouse_names'])" /></div>
                                <div style="margin: 5px 0;">============================</div>
                            </div>

                            <t t-if="data['categories_data']">
                                <t t-foreach="data['categories_data'].items()" t-as="category_item">
                                    <t t-set="category_name" t-value="category_item[0]" />
                                    <t t-set="category_products" t-value="category_item[1]" />

                                    <div style="margin: 10px 0;">
                                        <div
                                            style="margin: 5px 0; font-weight: bold; text-decoration: underline;"
                                            t-esc="category_name.upper()" />
                                        <t t-foreach="category_products" t-as="product">
                                            <div
                                                style="margin: 2px 0; font-size: 12px; display: table; width: 100%;">
                                                <div style="display: table-cell;">
                                                    <span t-esc="product['product_name']" /> (<span
                                                        t-esc="product['uom_symbol']" />) </div>
                                                <div
                                                    style="display: table-cell; text-align: right; white-space: nowrap; padding-left: 10px;">
                                                    <span t-esc="product['quantity']"
                                                        t-options="{'widget': 'float', 'precision': 2}" />
                                                </div>
                                            </div>
                                        </t>
                                    </div>
                                </t>

                                <div style="text-align: center; margin-top: 15px;">
                                    <div style="margin: 5px 0;">============================</div>
                                    <div style="margin: 5px 0; font-weight: bold; font-size: 14px;">
                                        TOTAL PRODUCTOS: <span t-esc="data['total_products']"
                                            t-options="{'widget': 'integer'}" />
                                    </div>
                                    <div style="margin: 5px 0;">============================</div>
                                </div>
                            </t>
                            <t t-else="">
                                <div style="text-align: center; margin-top: 20px; color: #999;">
                                    <p>No se encontraron productos en inventario</p>
                                </div>
                            </t>
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>

    <!-- Reporte para previsualización de ticket -->
    <record id="action_report_inventory_ticket_preview" model="ir.actions.report">
        <field name="name">Previsualización Ticket - Inventario</field>
        <field name="model">inventory.summary.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">asi_pos_reports.report_inventory_ticket_preview_template</field>
        <field name="report_file">asi_pos_reports.report_inventory_ticket_preview_template</field>
        <field name="binding_model_id" ref="model_inventory_summary_wizard" />
        <field name="binding_type">report</field>
    </record>
</odoo>