<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_asi_process_form" model="ir.ui.view">
    <field name="name">asi.process.form</field>
    <field name="model">asi.process</field>
    <field name="arch" type="xml">
      <form string="Proceso">
        <header>
          <button name="action_view_tasks" type="object" string="Tareas" class="btn-primary"/>
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <field name="description"/>
            <field name="department_id"/>
            <field name="responsible_id" domain="[('department_id','=',department_id)]"/>
            <field name="type"/>
            <field name="parent_id"/>
          </group>
          <notebook>
            <page string="Subprocesos">
              <field name="child_ids">
                <tree editable="bottom">
                  <field name="name"/>
                  <field name="type"/>
                </tree>
              </field>
            </page>
            <page string="Tareas">
              <field name="task_ids">
                <tree>
                  <field name="name"/>
                  <field name="user_id"/>
                  <field name="date_deadline"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_asi_process_tree" model="ir.ui.view">
    <field name="name">asi.process.tree</field>
    <field name="model">asi.process</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="type"/>
        <field name="department_id"/>
        <field name="responsible_id"/>
        <field name="parent_id"/>
      </tree>
    </field>
  </record>

  <record id="action_asi_process" model="ir.actions.act_window">
    <field name="name">Procesos</field>
    <field name="res_model">asi.process</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
