<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="it_asset_view_tree" model="ir.ui.view">
        <field name="name">it.asset.tree</field>
        <field name="model">it.asset</field>
        <field name="arch" type="xml">
            <tree string="Activos de TI">
                <field name="name"/>
                <field name="type"/>
                <field name="responsible_id"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="it_asset_view_form" model="ir.ui.view">
        <field name="name">it.asset.form</field>
        <field name="model">it.asset</field>
        <field name="arch" type="xml">
            <form string="Activo de TI">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type"/>
                        <field name="responsible_id"/>
                        <field name="status"/>
                    </group>
                    <notebook>
                        <page string="DescripciÃ³n">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_it_asset" model="ir.actions.act_window">
        <field name="name">Activos de TI</field>
        <field name="res_model">it.asset</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>