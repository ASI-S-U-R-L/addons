<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sgichs_core2_res_config_settings" model="ir.ui.view">
        <field name="name">sgichs.core2.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" string="Gestión de TI (SGICHS)" data-key="sgichs_core2" name="sgichs_settings">
                    <h2>Funcionalidades Modulares</h2>
                    
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-8">

                            <div class="o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Gestión de Activos</span>
                                    <div class="text-muted">
                                        Activa los módulos para el control de inventario de TI.
                                    </div>
                                    <div class="content-group mt16">
                                        <div class="row mt8">
                                            <label for="module_sgichs_hardware" class="col-lg-4 o_light_label"/>
                                            <field name="module_sgichs_hardware"/>
                                        </div>
                                        <div class="row mt8">
                                            <label for="module_sgichs_red" class="col-lg-4 o_light_label"/>
                                            <field name="module_sgichs_red"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Software y Usuarios</span>
                                    <div class="text-muted">
                                        Gestiona el ciclo de vida del software y los permisos de usuario.
                                    </div>
                                    <div class="content-group mt16">
                                        <div class="row mt8">
                                            <label for="module_sgichs_software" class="col-lg-4 o_light_label"/>
                                            <field name="module_sgichs_software"/>
                                        </div>
                                        <div class="row mt8">
                                            <label for="module_sgichs_users" class="col-lg-4 o_light_label"/>
                                            <field name="module_sgichs_users"/>
                                        </div>
                                        <div class="row mt8" attrs="{'invisible': [('module_sgichs_users', '=', False)]}">
                                            <label for="module_sgichs_users_profiles_software" class="col-lg-4 o_light_label" string="↳ Perfiles de Usuario"/>
                                            <field name="module_sgichs_users_profiles_software"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">General</span>
                                        <div class="text-muted">
                                            Configuraciones generales del sistema.
                                        </div>
                                    <div class="content-group mt16">
                                        <div class="row mt8">
                                            <label for="module_sgichs_reporting" class="col-lg-4 o_light_label"/>
                                            <field name="module_sgichs_reporting"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>