<odoo>
    <record id="view_sgichs_core2_res_config_settings" model="ir.ui.view">
        <field name="name">sgichs.core2.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
               <div class="app_settings_block" string="Ciberseguridad" data-key="sgichs_core2">
    <h2>Gestión de módulos de seguridad</h2>
    <div class="row mt16">
        <div class="col-12 col-lg-6">

            <div class="o_setting_box">
                <div class="o_setting_left_pane">
                    <field name="module_sgichs_hardware"/>
                </div>
                <div class="o_setting_right_pane">
                    <label for="module_sgichs_hardware"/>
                </div>
            </div>

            <div class="o_setting_box">
                <div class="o_setting_left_pane">
                    <field name="module_sgichs_software"/>
                </div>
                <div class="o_setting_right_pane">
                    <label for="module_sgichs_software"/>
                </div>
            </div>

            <div class="o_setting_box">
                <div class="o_setting_left_pane">
                    <field name="module_sgichs_red"/>
                </div>
                <div class="o_setting_right_pane">
                    <label for="module_sgichs_red"/>
                </div>
            </div>

            <div class="o_setting_box">
                <div class="o_setting_left_pane">
                    <field name="module_sgichs_users"/>
                </div>
                <div class="o_setting_right_pane">
                    <label for="module_sgichs_users"/>
                </div>
            </div>

        </div>
    </div>
</div>

            </xpath>
        </field>
    </record>
</odoo>
