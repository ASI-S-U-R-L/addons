<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="it_asset_backlog_view_tree" model="ir.ui.view">
        <field name="name">it.asset.backlog.tree</field>
        <field name="model">it.asset.backlog</field>
        <field name="arch" type="xml">
            <tree string="Backlog de Activos" decoration-muted="status == 'processed' or status == 'ignored'">
                <field name="name"/>
                <field name="type"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="it_asset_backlog_view_form" model="ir.ui.view">
        <field name="name">it.asset.backlog.form</field>
        <field name="model">it.asset.backlog</field>
        <field name="arch" type="xml">
            <form string="Activo en Backlog">
                 <header>
                    <button name="action_approve" string="Aprobar y Crear Activo" type="object" class="oe_highlight" attrs="{'invisible': [('status', '!=', 'pending')]}"/>
                    <button name="action_ignore" string="Ignorar" type="object" attrs="{'invisible': [('status', '!=', 'pending')]}"/>
                    <field name="status" widget="statusbar" statusbar_visible="pending,processed"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type"/>
                        <field name="description"/>
                        <field name="raw_data" attrs="{'invisible': [('raw_data', '=', False)]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_it_asset_backlog" model="ir.actions.act_window">
        <field name="name">Activo Entrante</field>
        <field name="res_model">it.asset.backlog</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>