<?xml version="1.0"?>
<odoo>
    <record id="sgichs_software_ai_res_config_settings_view" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.sgichs.software.ai.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" string="SGICHS Software AI" data-key="sgichs_software_ai_classification">
                    <div class="row mt16">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_software_ai_classification"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_software_ai_classification"/>
                                <div class="text-muted">Activa la clasificación automática de software no catalogado usando IA. Se ejecutará diariamente.</div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>