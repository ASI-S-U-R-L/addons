        <record id="demo_component_keyboard_1" model="it.component">
            <field name="model">Logitech MX Keys</field>
            <field name="subtype_id" eval="ref('subtype_keyboard')"/>
            <field name="serial_number">SN-KB-001</field>
            <field name="inventory_number">INV-KB-001</field>
            <field name="status">operational</field>
        </record>
    </data>
</odoo>