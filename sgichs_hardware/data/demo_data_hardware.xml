<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="subtype_motherboard" model="it.component.subtype">
            <field name="name">PLACA MADRE</field>
            <field name="type">internal</field>
            <field name="description">Componente principal que une todos los demás componentes internos.</field>
        </record>
        <record id="subtype_cpu" model="it.component.subtype">
            <field name="name">CPU</field>
            <field name="type">internal</field>
            <field name="description">Unidad Central de Procesamiento. El cerebro del ordenador.</field>
        </record>
        <record id="subtype_ram" model="it.component.subtype">
            <field name="name">RAM</field>
            <field name="type">internal</field>
            <field name="description">Memoria de Acceso Aleatorio. Usada para el almacenamiento temporal de datos.</field>
        </record>
        <record id="subtype_gpu" model="it.component.subtype">
            <field name="name">GPU</field>
            <field name="type">internal</field>
            <field name="description">Unidad de Procesamiento Gráfico. Responsable de renderizar imágenes.</field>
        </record>
        <record id="subtype_ssd" model="it.component.subtype">
            <field name="name">SSD</field>
            <field name="type">internal</field>
            <field name="description">Unidad de Estado Sólido. Almacenamiento de datos no volátil.</field>
        </record>
        <record id="subtype_hdd" model="it.component.subtype">
            <field name="name">DISCO DURO</field>
            <field name="type">internal</field>
            <field name="description">Disco Duro Mecánico (HDD). Almacenamiento magnético.</field>
        </record>
        <record id="subtype_psu" model="it.component.subtype">
            <field name="name">FUENTE DE ALIMENTACIÓN</field>
            <field name="type">internal</field>
            <field name="description">PSU. Proporciona energía eléctrica a los componentes internos.</field>
        </record>
        <record id="subtype_network_card" model="it.component.subtype">
            <field name="name">TARJETA DE RED</field>
            <field name="type">internal</field>
            <field name="description">Permite la conexión del equipo a una red informática.</field>
        </record>

        <record id="subtype_keyboard" model="it.component.subtype">
            <field name="name">TECLADO</field>
            <field name="type">peripheral</field>
            <field name="description">Periférico de entrada para introducir texto y comandos.</field>
        </record>
        <record id="subtype_mouse" model="it.component.subtype">
            <field name="name">MOUSE</field>
            <field name="type">peripheral</field>
            <field name="description">Periférico de entrada para interactuar con la interfaz gráfica.</field>
        </record>
        <record id="subtype_monitor" model="it.component.subtype">
            <field name="name">MONITOR</field>
            <field name="type">peripheral</field>
            <field name="description">Periférico de salida que muestra la información gráfica.</field>
        </record>
        <record id="subtype_printer" model="it.component.subtype">
            <field name="name">IMPRESORA</field>
            <field name="type">peripheral</field>
            <field name="description">Periférico de salida para producir una copia física de documentos.</field>
        </record>
        <record id="subtype_speakers" model="it.component.subtype">
            <field name="name">ALTAVOCES</field>
            <field name="type">peripheral</field>
            <field name="description">Periférico de salida para reproducir sonido.</field>
        </record>
        <record id="subtype_webcam" model="it.component.subtype">
            <field name="name">WEBCAM</field>
            <field name="type">peripheral</field>
            <field name="description">Periférico de entrada que captura vídeo.</field>
        </record>

