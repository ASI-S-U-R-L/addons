<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de búsqueda para signature.workflow -->
    <record id="view_signature_workflow_search" model="ir.ui.view">
        <field name="name">signature.workflow.search</field>
        <field name="model">signature.workflow</field>
        <field name="arch" type="xml">
            <search string="Buscar Solicitudes de Firma">
                <field name="name"/>
                <field name="creator_id"/>
                <field name="state"/>
                <field name="sent_date"/>
                <filter string="Mis Solicitudes Creadas" name="my_created" domain="[('creator_id', '=', uid)]"/>
                <filter string="Para Firmar" name="to_sign" domain="[('state', '=', 'sent')]"/>
                <filter string="Borradores" name="drafts" domain="[('state', '=', 'draft')]"/>
                <filter string="Completadas" name="completed" domain="[('state', '=', 'completed')]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Creador" name="group_creator" context="{'group_by': 'creator_id'}"/>
                    <filter string="Fecha de Envío" name="group_sent_date" context="{'group_by': 'sent_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vista de lista para signature.workflow -->
    <record id="view_signature_workflow_tree" model="ir.ui.view">
        <field name="name">signature.workflow.tree</field>
        <field name="model">signature.workflow</field>
        <field name="arch" type="xml">
            <tree string="Solicitudes de Firma" 
                  decoration-muted="state in ('draft', 'cancelled')" 
                  decoration-success="state in ('completed', 'signed')" 
                  decoration-danger="state == 'rejected'"
                  default_order="create_date desc">
                <field name="name"/>
                <field name="creator_id"/>
                <field name="state" widget="badge" decoration-info="state == 'sent'" decoration-warning="state == 'draft'" decoration-success="state in ('completed', 'signed')" decoration-danger="state == 'rejected'"/>
                <field name="sent_date"/>
                <field name="document_count"/>
                <button name="action_send_for_signature" string="Enviar" type="object" icon="fa-send" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                <button name="action_sign_documents" string="Firmar" type="object" icon="fa-pencil" attrs="{'invisible': [('state', '!=', 'sent')]}"/>
            </tree>
        </field>
    </record>

    <!-- Vista de formulario para signature.workflow -->
    <record id="view_signature_workflow_form" model="ir.ui.view">
        <field name="name">signature.workflow.form</field>
        <field name="model">signature.workflow</field>
        <field name="arch" type="xml">
            <form string="Solicitud de Firma">
                <header>
                    <button name="action_send_for_signature" string="Enviar para Firma" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_sign_documents" string="Firmar Documentos" type="object" class="btn-success" attrs="{'invisible': [('state', '!=', 'sent')]}"/>
                    <button name="action_reject_workflow" string="Rechazar" type="object" class="btn-danger" attrs="{'invisible': [('state', '!=', 'sent')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,completed,rejected"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="creator_id" readonly="1"/>
                            <field name="sent_date" readonly="1"/>
                            <field name="completed_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="state" readonly="1"/>
                            <field name="document_source"/>
                            <field name="document_count" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page name="documentos" string="Documentos">
                            <field name="document_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="is_signed"/>
                                    <field name="signed_date"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page name="destinatarios" string="Destinatarios">
                            <group>
                                <group>
                                    <field name="target_user_id_1"/>
                                    <field name="signature_role_id_1"/>
                                    <field name="signature_position_1"/>
                                    <field name="signed_by_user_1"/>
                                </group>
                                <group>
                                    <field name="target_user_id_2"/>
                                    <field name="signature_role_id_2"/>
                                    <field name="signature_position_2"/>
                                    <field name="signed_by_user_2"/>
                                </group>
                                <group>
                                    <field name="target_user_id_3"/>
                                    <field name="signature_role_id_3"/>
                                    <field name="signature_position_3"/>
                                    <field name="signed_by_user_3"/>
                                </group>
                                <group>
                                    <field name="target_user_id_4"/>
                                    <field name="signature_role_id_4"/>
                                    <field name="signature_position_4"/>
                                    <field name="signed_by_user_4"/>
                                </group>
                            </group>
                        </page>
                        
                        <page name="configuracion" string="Configuración">
                            <group>
                                <group>
                                    <field name="signature_opaque_background"/>
                                    <field name="sign_all_pages"/>
                                </group>
                                <group>
                                    <field name="destination_folder_id"/>
                                </group>
                            </group>
                        </page>
                        
                        <page name="historial" string="Historial">
                            <field name="message_ids" mode="tree,form" readonly="1">
                                <tree>
                                    <field name="create_date"/>
                                    <field name="author_id"/>
                                    <field name="body"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista Kanban para signature.workflow -->
    <record id="view_signature_workflow_kanban" model="ir.ui.view">
        <field name="name">signature.workflow.kanban</field>
        <field name="model">signature.workflow</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="state"/>
                <field name="creator_id"/>
                <field name="document_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <span><t t-esc="record.name.value"/></span>
                                    </strong>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <span class="o_kanban_record_subtitle">
                                                <i class="fa fa-file-pdf-o"/> <t t-esc="record.document_count.value"/> documento(s)
                                            </span>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <span t-attf-class="badge bg-{{record.state.raw_value == 'completed' and 'success' or record.state.raw_value == 'sent' and 'info' or record.state.raw_value == 'draft' and 'warning' or record.state.raw_value == 'rejected' and 'danger' or 'secondary'}}">
                                                <t t-esc="record.state.value"/>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="text-muted small mt-1">
                                        <i class="fa fa-user"/> Creador: <t t-esc="record.creator_id.value"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Acción de ventana para signature.workflow -->
    <record id="action_signature_workflow" model="ir.actions.act_window">
        <field name="name">Solicitudes de Firma</field>
        <field name="res_model">signature.workflow</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_my_created': 1}</field>
        <field name="help">Aqui puedes gestionar todas las solicitudes de firma digital.</field>
    </record>
</odoo>
