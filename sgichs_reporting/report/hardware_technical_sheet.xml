<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="template_hardware_technical_sheet">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page" style="font-family: 'Helvetica', sans-serif; color: #333;">

                        <div class="header" style="display: flex; justify-content: space-between; align-items: center; border-bottom: 2px solid #0077B6; padding-bottom: 15px; margin-bottom: 30px;">
                            
                            <div class="logo-company" style="flex: 1 1 0;">
                                <img t-if="user.company_id.logo" t-att-src="image_data_uri(user.company_id.logo)" style="max-height: 60px; max-width: 150px;" alt="Company Logo"/>
                            </div>

                            <div class="title" style="flex: 2 1 0; text-align: center;">
                                <h1 style="color: #0077B6; font-weight: bold; margin: 0; font-size: 24px;">
                                    Ficha Técnica de Hardware
                                </h1>
                            </div>

                            <div class="logo-module" style="flex: 1 1 0; text-align: right;">
                                <img src="/sgichs_reporting/static/description/logo.png" style="max-height: 60px; max-width: 150px;" alt="Module Logo"/>
                            </div>
                        </div>

                        <div class="main-details" style="margin-bottom: 35px;">
                            <h2 style="color: #0077B6; border-bottom: 1px solid #CCC; padding-bottom: 8px; margin-bottom: 15px;">
                                Datos del Equipo: <span t-field="doc.name" style="font-weight: normal;"/>
                            </h2>
                            <table class="table table-sm table-bordered" style="border-color: #DEE2E6;">
                                <tbody>
                                    <tr>
                                        <td style="width: 25%; background-color: #F8F9FA;"><strong>Nº de Inventario</strong></td>
                                        <td style="width: 25%;"><span t-field="doc.inventory_number"/></td>
                                        <td style="width: 25%; background-color: #F8F9FA;"><strong>Estado</strong></td>
                                        <td style="width: 25%;"><span t-field="doc.status"/></td>
                                    </tr>
                                    <tr>
                                        <td style="background-color: #F8F9FA;"><strong>Tipo de Activo</strong></td>
                                        <td><span t-field="doc.subtype"/></td>
                                        <td style="background-color: #F8F9FA;"><strong>Responsable</strong></td>
                                        <td><span t-field="doc.responsible_id.name"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="footer" style="position: absolute; bottom: 20px; width: 100%; border-top: 1px solid #CCC; padding-top: 10px; font-size: 10px; color: #777; text-align: center;">
                            <p>Documento generado automáticamente por el Sistema de Gestión de TI | Fecha de generación: <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y a las %H:%M')"/></p>
                            <p t-if="user.company_id.name"><t t-esc="user.company_id.name"/> | <t t-esc="user.company_id.website or ''"/></p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>