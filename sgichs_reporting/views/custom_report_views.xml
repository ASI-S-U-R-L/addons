<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_report_custom_tree" model="ir.ui.view">
        <field name="name">custom.report.tree</field>
        <field name="model">custom.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="model_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_report_custom_form" model="ir.ui.view">
        <field name="name">custom.report.form</field>
        <field name="model">custom.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="model_id"/>
                        <!-- CORRECCIÓN: Se añade el campo 'model' invisible para que el contexto funcione -->
                        <field name="model" invisible="1"/>
                        <field name="report_action_id" context="{'default_model': model}"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_custom_report_config" model="ir.actions.act_window">
        <field name="name">Configuración de Reportes</field>
        <field name="res_model">custom.report</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_reporting_config"
        name="Reportes"
        parent="sgichs_core2.menu_it_config"
        sequence="50"/>

    <menuitem
        id="menu_action_custom_report_config"
        name="Configurar Reportes"
        action="action_custom_report_config"
        parent="menu_reporting_config"
        sequence="10"/>
</odoo>