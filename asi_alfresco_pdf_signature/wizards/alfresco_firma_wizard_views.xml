<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_alfresco_firma_wizard_form" model="ir.ui.view">
        <field name="name">alfresco.firma.wizard.form</field>
        <field name="model">alfresco.firma.wizard</field>
        <field name="arch" type="xml">
            <form string="Firma Digital de PDFs de Alfresco">
                <field name="status" invisible="1" />
                <field name="file_count" invisible="1" />
                <field name="has_certificate" invisible="1" />
                <field name="has_password" invisible="1" />
                <field name="has_image" invisible="1" />
                <field name="certificate_wizard_name" invisible="1" />

                <!-- Estado: Configuraci√≥n -->
                <div attrs="{'invisible': [('status', '!=', 'borrador')]}">
                    <div class="alert alert-info" role="alert">
                        <h4><i class="fa fa-pen" /> Configuraci√≥n de Firma Digital</h4>
                        <p>Configure los par√°metros para firmar <strong><field name="file_count" />
                            archivo(s) PDF</strong> seleccionado(s) desde Alfresco.</p>
                        <p>Los documentos firmados se actualizar√°n como nuevas versiones en Alfresco
                            manteniendo el mismo archivo.</p>
                    </div>

                    <!-- Estado del usuario -->
                    <div class="alert alert-warning" role="alert" style="margin-bottom: 15px;">
                        <h5><i class="fa fa-user" /> Estado de su Configuraci√≥n:</h5>
                        <div class="row">
                            <div class="col-4">
                                <span
                                    attrs="{'invisible': [('has_certificate', '=', True)]}">
                                    <i class="fa fa-times text-danger" /> Sin certificado </span>
                                <span
                                    attrs="{'invisible': [('has_certificate', '=', False)]}">
                                    <i class="fa fa-check text-success" /> Certificado configurado </span>
                            </div>
                            <div class="col-4">
                                <span
                                    attrs="{'invisible': [('has_password', '=', True)]}">
                                    <i class="fa fa-times text-danger" /> Sin contrase√±a guardada </span>
                                <span
                                    attrs="{'invisible': [('has_password', '=', False)]}">
                                    <i class="fa fa-check text-success" /> Contrase√±a guardada </span>
                            </div>
                            <div class="col-4">
                                <span attrs="{'invisible': [('has_image', '=', True)]}">
                                    <i class="fa fa-times text-danger" /> Sin imagen de firma </span>
                                <span attrs="{'invisible': [('has_image', '=', False)]}">
                                    <i class="fa fa-check text-success" /> Imagen configurada </span>
                            </div>
                        </div>
                        <p style="margin-top: 10px; margin-bottom: 0;">
                            <strong>Nota:</strong> Los datos del wizard tienen prioridad sobre su
                            configuraci√≥n personal. </p>
                    </div>

                    <group>
                        <group>
                            <field name="signature_role"
                                placeholder="ej: Aprobado por:, Contabilizado por:, etc."
                                required="1" />
                            <field name="signature_position" widget="Select2" />
                        </group>
                        <group>
                            <field name="signature_password" password="True"
                                attrs="{'required': [('has_password', '=', False)], 'invisible': [('has_password', '=', True)]}" />
                        </group>
                    </group>

                    <!-- Campos adicionales para certificado e imagen temporal -->
                    <group string="Datos Temporales" col="2">
                        <group>
                            <field name="certificate_wizard" filename="certificate_wizard_name"
                                widget="binary"
                                attrs="{'required': [('has_certificate', '=', False)], 'invisible': [('has_certificate', '=', True)]}" />
                        </group>
                        <group>
                            <field name="wizard_signature_image" widget="image"
                                options="{'size': [200, 100]}"
                                attrs="{'required': [('has_image', '=', False)], 'invisible': [('has_image', '=', True)]}" />
                        </group>
                    </group>

                    <!-- Lista de archivos seleccionados -->
                    <group string="üìÑ Archivos Seleccionados" col="1">
                        <field name="file_ids" nolabel="1" readonly="1" widget="many2many">
                            <tree create="false" edit="false" delete="false">
                                <field name="name" />
                                <field name="folder_id" />
                                <field name="file_size_human" />
                            </tree>
                        </field>
                    </group>

                    <footer>
                        <button name="action_firmar_documentos"
                            string="üñäÔ∏è Firmar Documentos"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible': ['|', '|', '|', ('signature_role', '=', False), ('signature_role', '=', ''), ('signature_password', '=', False), ('file_count', '=', 0)]}" />
                    </footer>
                </div>

                <!-- Estado: Procesando -->
                <div attrs="{'invisible': [('status', '!=', 'procesando')]}">
                    <div class="alert alert-warning" role="alert">
                        <h4><i class="fa fa-spinner fa-spin" /> Procesando Firma Digital</h4>
                        <p>Por favor espere mientras se procesan los documentos...</p>
                        <field name="message_result" readonly="1" />
                    </div>

                    <div class="progress" style="margin: 20px 0;">
                        <div class="progress-bar progress-bar-striped progress-bar-animated"
                            role="progressbar"
                            t-att-style="'width: ' + str(record.documents_processed.raw_value * 100 / record.file_count.raw_value) + '%'">
                        </div>
                    </div>
                </div>

                <!-- Estado: Completado -->
                <div attrs="{'invisible': [('status', '!=', 'completado')]}">
                    <div class="alert alert-success" role="alert">
                        <h4><i class="fa fa-check-circle" /> ¬°Proceso Completado!</h4>
                        <field name="message_result" readonly="1" nolabel="1" />
                    </div>

                    <div class="row text-center" style="margin: 20px 0;">
                        <div class="col-6">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h3>
                                        <field name="documents_processed" />
                                    </h3>
                                    <p>Archivos Firmados</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <h3>
                                        <field name="file_count" />
                                    </h3>
                                    <p>Total Procesados</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Estado: Error -->
                <div attrs="{'invisible': [('status', '!=', 'error')]}">
                    <div class="alert alert-danger" role="alert">
                        <h4><i class="fa fa-exclamation-triangle" /> Error en el Proceso</h4>
                        <field name="message_result" readonly="1" nolabel="1" />
                    </div>

                    <div class="row text-center" style="margin: 20px 0;"
                        attrs="{'invisible': [('documents_processed', '=', 0)]}">
                        <div class="col-4">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h3>
                                        <field name="documents_processed" />
                                    </h3>
                                    <p>Exitosos</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="card bg-danger text-white">
                                <div class="card-body">
                                    <h3>
                                        <field name="documents_with_error" />
                                    </h3>
                                    <p>Con Error</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <h3>
                                        <field name="file_count" />
                                    </h3>
                                    <p>Total</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <footer>
                        <button name="action_cerrar_wizard" string="Cerrar" type="object"
                            class="btn-secondary" />
                    </footer>
                </div>
            </form>
        </field>
    </record>

    <record id="action_alfresco_firma_wizard" model="ir.actions.act_window">
        <field name="name">Firmar PDFs de Alfresco</field>
        <field name="res_model">alfresco.firma.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>