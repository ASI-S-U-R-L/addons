<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista de formulario para cierre mensual administrativo -->
    <record id="view_fleet_monthly_closure_admin_form" model="ir.ui.view">
        <field name="name">fleet.monthly.closure.admin.form</field>
        <field name="model">fleet.monthly.closure.admin</field>
        <field name="arch" type="xml">
            <form string="Cierre Mensual Administrativo">
                <header>
                    <button name="action_confirm" string="Confirmar" type="object" 
                            class="btn-primary" states="draft"/>
                    <button name="action_close" string="Cerrar" type="object" 
                            class="btn-success" states="confirmed"/>
                    <button name="action_draft" string="Volver a Borrador" type="object" 
                            states="confirmed"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,closed"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_fuel_logs" 
                                icon="fa-tint" attrs="{'invisible': [('fuel_logs_count', '=', 0)]}">
                            <field string="Combustible" name="fuel_logs_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_consumption_analysis" 
                                icon="fa-line-chart" states="confirmed,closed">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Ver Análisis</span>
                                <span class="o_stat_text">de Consumo</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Información Básica">
                            <field name="vehicle_id" options="{'no_create': True}" 
                                   domain="[('vehicle_custom_type', 'in', ['movil', 'tecnologico']), ('has_route_sheet', '=', False)]"/>
                            <field name="license_plate" readonly="1"/>
                            <field name="vehicle_type" readonly="1"/>
                            <field name="driver_id" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="Período del Cierre">
                            <field name="closure_date"/>
                            <field name="closure_month" readonly="1"/>
                            <field name="closure_year" readonly="1"/>
                            <field name="responsible_id"/>
                        </group>
                    </group>

                    <!-- Odómetros y horas -->
                    <group string="Control de Odómetro y Horas">
                        <group>
                            <field name="odometer_start" widget="float"/>
                            <field name="odometer_end" widget="float"/>
                            <field name="total_kilometers" readonly="1" widget="float"/>
                        </group>
                        <group attrs="{'invisible': [('vehicle_type', '!=', 'tecnologico')]}">
                            <field name="hours_start" widget="float"/>
                            <field name="hours_end" widget="float"/>
                            <field name="total_hours" readonly="1" widget="float"/>
                        </group>
                    </group>

                    <!-- Combustible -->
                    <group string="Consumo de Combustible (Automático)">
                        <group>
                            <field name="total_fuel_consumed" readonly="1" widget="float"/>
                            <field name="fuel_logs_count" readonly="1"/>
                        </group>
                        <group>
                            <!-- Información de eficiencia -->
                            <div class="o_form_label">Eficiencia Estimada:</div>
                            <div name="efficiency_preview">
                                <span attrs="{'invisible': [('total_fuel_consumed', '=', 0)]}">
                                    Calculada automáticamente al confirmar
                                </span>
                                <span attrs="{'invisible': [('total_fuel_consumed', '!=', 0)]}">
                                    Sin datos de combustible
                                </span>
                            </div>
                        </group>
                    </group>

                    <notebook>
                        <page string="Servicios Realizados" name="services">
                            <group>
                                <field name="services_description" nolabel="1" 
                                       placeholder="Describa detalladamente los servicios administrativos realizados durante el mes (reuniones, gestiones, traslados de personal, etc.)..."
                                       attrs="{'required': [('state', 'in', ['confirmed', 'closed'])]}"/>
                            </group>
                        </page>
                        
                        <page string="Destinos" name="destinations">
                            <group>
                                <field name="destinations" nolabel="1" 
                                       placeholder="Liste los principales destinos visitados durante el mes (oficinas, instituciones, proveedores, etc.)..."/>
                            </group>
                        </page>
                        
                        <page string="Observaciones" name="observations">
                            <group>
                                <field name="observations" nolabel="1" 
                                       placeholder="Observaciones adicionales sobre el cierre mensual..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de lista -->
    <record id="view_fleet_monthly_closure_admin_tree" model="ir.ui.view">
        <field name="name">fleet.monthly.closure.admin.tree</field>
        <field name="model">fleet.monthly.closure.admin</field>
        <field name="arch" type="xml">
            <tree string="Cierres Mensuales Administrativos" 
                  decoration-info="state=='draft'" 
                  decoration-warning="state=='confirmed'" 
                  decoration-success="state=='closed'"
                  sample="1">
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="license_plate"/>
                <field name="closure_date"/>
                <field name="closure_month"/>
                <field name="closure_year"/>
                <field name="total_kilometers" sum="Total Km"/>
                <field name="total_fuel_consumed" sum="Total Combustible"/>
                <field name="fuel_logs_count"/>
                <field name="responsible_id" widget="many2one_avatar"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'" 
                       decoration-warning="state == 'confirmed'" 
                       decoration-success="state == 'closed'"/>
                <field name="activity_exception_decoration" widget="activity_exception"/>
            </tree>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="view_fleet_monthly_closure_admin_search" model="ir.ui.view">
        <field name="name">fleet.monthly.closure.admin.search</field>
        <field name="model">fleet.monthly.closure.admin</field>
        <field name="arch" type="xml">
            <search string="Buscar Cierres Mensuales">
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="license_plate"/>
                <field name="responsible_id"/>
                <field name="closure_date"/>
                
                <filter string="Mis Cierres" name="my_closures" domain="[('responsible_id', '=', uid)]"/>
                <filter string="Borrador" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmados" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Cerrados" name="closed" domain="[('state', '=', 'closed')]"/>
                
                <separator/>
                <filter string="Este Mes" name="this_month" 
                        domain="[('closure_month', '=', context_today().month), ('closure_year', '=', context_today().year)]"/>
                <filter string="Mes Anterior" name="last_month" 
                        domain="[('closure_month', '=', (context_today().replace(day=1) - datetime.timedelta(days=1)).month)]"/>
                
                <separator/>
                <filter string="Móviles" name="movil" domain="[('vehicle_type', '=', 'movil')]"/>
                <filter string="Tecnológicos" name="tecnologico" domain="[('vehicle_type', '=', 'tecnologico')]"/>
                
                <group expand="0" string="Agrupar Por">
                    <filter string="Vehículo" name="group_by_vehicle" context="{'group_by': 'vehicle_id'}"/>
                    <filter string="Mes" name="group_by_month" context="{'group_by': 'closure_month'}"/>
                    <filter string="Año" name="group_by_year" context="{'group_by': 'closure_year'}"/>
                    <filter string="Estado" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Responsable" name="group_by_responsible" context="{'group_by': 'responsible_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción principal -->
    <record id="action_fleet_monthly_closure_admin" model="ir.actions.act_window">
        <field name="name">Cierres Mensuales Administrativos</field>
        <field name="res_model">fleet.monthly.closure.admin</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea el primer cierre mensual administrativo
            </p>
            <p>
                Los cierres mensuales son para vehículos administrativos que no usan hojas de ruta.
                El sistema correlacionará automáticamente con los tickets de combustible para generar
                el análisis de consumo correspondiente.
            </p>
        </field>
    </record>

</odoo>
