<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista de formulario para normas de consumo -->
    <record id="view_fleet_consumption_standard_form" model="ir.ui.view">
        <field name="name">fleet.consumption.standard.form</field>
        <field name="model">fleet.consumption.standard</field>
        <field name="arch" type="xml">
            <form string="Norma de Consumo">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_apply_to_vehicles" 
                                icon="fa-car">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Ver Vehículos</span>
                                <span class="o_stat_text">Aplicables</span>
                            </div>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Archivado" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="ej: Norma Vehículos Móviles 2024"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Información Básica">
                            <field name="active"/>
                            <field name="vehicle_type"/>
                            <field name="legal_reference" placeholder="ej: Decreto 110/2024"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="Vigencia">
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="tolerance_percentage" widget="percentage"/>
                        </group>
                    </group>

                    <!-- Criterios de aplicación -->
                    <group string="Criterios de Aplicación (Opcional - Dejar vacío para aplicar a todos)">
                        <group>
                            <field name="brand_id" options="{'no_create': True}"/>
                            <field name="model_id" options="{'no_create': True}" 
                                   domain="[('brand_id', '=', brand_id)]" 
                                   attrs="{'invisible': [('brand_id', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="category_id" options="{'no_create': True}"/>
                        </group>
                    </group>

                    <!-- Normas de consumo -->
                    <group string="Normas de Consumo">
                        <group attrs="{'invisible': [('vehicle_type', '=', 'estacionario')]}">
                            <field name="standard_kml" widget="float" 
                                   attrs="{'required': [('vehicle_type', 'in', ['movil', 'tecnologico'])]}"/>
                            <div class="text-muted">
                                <small>Kilómetros que debe recorrer el vehículo con 1 litro de combustible</small>
                            </div>
                        </group>
                        <group attrs="{'invisible': [('vehicle_type', '!=', 'estacionario')]}">
                            <field name="standard_lh" widget="float" 
                                   attrs="{'required': [('vehicle_type', '=', 'estacionario')]}"/>
                            <div class="text-muted">
                                <small>Litros que debe consumir el equipo por hora de operación</small>
                            </div>
                        </group>
                    </group>

                    <group string="Observaciones">
                        <field name="notes" nolabel="1" 
                               placeholder="Observaciones adicionales sobre esta norma (condiciones especiales, excepciones, etc.)"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de lista -->
    <record id="view_fleet_consumption_standard_tree" model="ir.ui.view">
        <field name="name">fleet.consumption.standard.tree</field>
        <field name="model">fleet.consumption.standard</field>
        <field name="arch" type="xml">
            <tree string="Normas de Consumo" editable="bottom">
                <field name="name"/>
                <field name="vehicle_type"/>
                <field name="brand_id" optional="hide"/>
                <field name="model_id" optional="hide"/>
                <field name="category_id" optional="hide"/>
                <field name="standard_kml" attrs="{'column_invisible': [('parent.vehicle_type', '=', 'estacionario')]}"/>
                <field name="standard_lh" attrs="{'column_invisible': [('parent.vehicle_type', '!=', 'estacionario')]}"/>
                <field name="tolerance_percentage" widget="percentage"/>
                <field name="date_from"/>
                <field name="date_to" optional="hide"/>
                <field name="legal_reference" optional="hide"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="view_fleet_consumption_standard_search" model="ir.ui.view">
        <field name="name">fleet.consumption.standard.search</field>
        <field name="model">fleet.consumption.standard</field>
        <field name="arch" type="xml">
            <search string="Buscar Normas">
                <field name="name"/>
                <field name="vehicle_type"/>
                <field name="brand_id"/>
                <field name="model_id"/>
                <field name="legal_reference"/>
                
                <filter string="Activas" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivas" name="inactive" domain="[('active', '=', False)]"/>
                
                <separator/>
                <filter string="Móviles" name="movil" domain="[('vehicle_type', '=', 'movil')]"/>
                <filter string="Tecnológicos" name="tecnologico" domain="[('vehicle_type', '=', 'tecnologico')]"/>
                <filter string="Estacionarios" name="estacionario" domain="[('vehicle_type', '=', 'estacionario')]"/>
                
                <separator/>
                <filter string="Vigentes Hoy" name="valid_today" 
                        domain="[('date_from', '&lt;=', context_today()), '|', ('date_to', '=', False), ('date_to', '&gt;=', context_today())]"/>
                
                <group expand="0" string="Agrupar Por">
                    <filter string="Tipo de Vehículo" name="group_by_type" context="{'group_by': 'vehicle_type'}"/>
                    <filter string="Marca" name="group_by_brand" context="{'group_by': 'brand_id'}"/>
                    <filter string="Categoría" name="group_by_category" context="{'group_by': 'category_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción para normas -->
    <record id="action_fleet_consumption_standard" model="ir.actions.act_window">
        <field name="name">Normas de Consumo</field>
        <field name="res_model">fleet.consumption.standard</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1, 'search_default_valid_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define las normas de consumo
            </p>
            <p>
                Establece las normas de consumo según el Decreto 110/2024 para cada tipo de vehículo.
                Estas normas se usarán para evaluar el cumplimiento en los análisis de consumo.
            </p>
        </field>
    </record>

</odoo>
