<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="calendar_workplan_module_category" model="ir.module.category">
                <field name="name">Work Plan</field>
                <field name="description">Helps you manage your work plans and tasks by tracking
                        them, generating reports, etc...</field>
        </record>

        <record id="calendar_workplan_group_user" model="res.groups">
                <field name="name">User</field>
                <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
                <field name="category_id" ref="calendar_workplan_module_category" />
        </record>

        <record id="calendar_workplan_group_manager" model="res.groups">
                <field name="name">Administrator</field>
                <field name="category_id" ref="calendar_workplan_module_category" />
                <field name="implied_ids" eval="[(4, ref('calendar_workplan_group_user'))]" />
                <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
        </record>
</odoo>
