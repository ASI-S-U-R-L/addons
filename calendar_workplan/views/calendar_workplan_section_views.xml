<odoo>
        <!-- explicit list view definition -->
        <record id="calendar_workplan_section_view_tree" model="ir.ui.view">
                <field name="name">calendar_workplan.section.view.tree</field>
                <field name="model">calendar_workplan.section</field>
                <field name="arch" type="xml">
                        <tree string="Sections" sample="1" multi_edit="1">
                                <field name="sequence" widget="handle" />
                                <field name="name" />
                                <field name="parent_id" />
                                <field name="workplan_ids" widget="many2many_tags" />
                                <field name="active" widget="boolean_toggle" />
                        </tree>
                </field>
        </record>

        <record id="calendar_workplan_section_view_search" model="ir.ui.view">
                <field name="name">calendar_workplan.section.search</field>
                <field name="model">calendar_workplan.section</field>
                <field name="arch" type="xml">
                        <search string="Sections">
                                <field name="name" string="Section" />
                                <field name="parent_id" string="Parent Section" />
                                <separator />
                                <filter string="Archived" name="filter_inactive"
                                        domain="[('active','=',False)]" />
                        </search>
                </field>
        </record>

        <!-- actions opening views on models -->
        <record id="calendar_workplan_section_action" model="ir.actions.act_window">
                <field name="name">Sections</field>
                <field name="res_model">calendar_workplan.section</field>
                <field name="view_mode">tree</field>
                <field name="view_id" ref="calendar_workplan_section_view_tree" />
        </record>

</odoo>
