<odoo>
    <record id="res_company_view_form_inherit_workplan" model="ir.ui.view">
        <field name="name">res.company.form.inherit.workplan</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <group string="Workplan Configuration">
                    <field name="workplan_planner_partner_id" 
                           help="Default presenter for monthly/annual workplans"/>
                    <field name="workplan_approver_partner_id" 
                           help="Default approver for monthly/annual workplans"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>    