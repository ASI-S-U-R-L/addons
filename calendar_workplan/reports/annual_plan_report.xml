<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_annual_plan">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page" style="size: Letter landscape; margin: 0; padding: 15px; min-width: 279.4mm; min-height: 215.9mm;">
                        <style>
                            .table {
                                width: 100%;
                                table-layout: fixed;
                                margin-top: 15px;
                                border-collapse: collapse;
                            }
                            .table th, .table td {
                                padding: 5px;
                                border: 1px solid #dee2e6;
                                font-size: 12px;
                                vertical-align: top;
                            }
                            .section-header {
                                background-color: #f0f8ff;
                                font-weight: bold;
                            }
                            .event-time {
                                font-weight: bold;
                                color: #2c3e50;
                            }
                        </style>

                        <h2>Plan Anual: <span t-field="doc.name"/></h2>
                        
                        <div class="row mt-4">
                            <div class="col-6">
                                <strong>Presentado por:</strong> 
                                <span t-field="doc.presented_by_partner_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Aprobado por:</strong> 
                                <span t-field="doc.approved_by_partner_id.name"/>
                            </div>                            
                        </div>

                        <table class="table table-bordered mt-4">
                            <thead>
                                <tr>
                                    <th>Evento</th>
                                    <th t-foreach="range(1,13)" t-as="month">
                                        <span t-esc="datetime.datetime(2000, month, 1).strftime('%b')[0].upper()"/>
                                    </th>
                                    <th>Lugar</th>
                                    <th>Organizador</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="sections" t-value="doc.get_grouped_events_by_section()"/>
                                <t t-foreach="sections" t-as="section">
                                    <!-- Encabezado de sección -->
                                    <tr class="section-header">
                                        <td colspan="14">
                                            <span t-esc="section['name']"/>
                                        </td>
                                    </tr>
                                    
                                    <!-- Eventos únicos sin duplicados -->
                                    <t t-set="unique_events" t-value="section['events']"/>
                                    <tr t-foreach="unique_events" t-as="event">
                                        <td>
                                            <div><span t-field="event.name"/></div>
                                        </td>
                                        <t t-foreach="range(1,13)" t-as="month">
                                            <td>
                                                <t t-if="event.recurrence_id">
                                                    <t t-set="month_days" t-value="event.get_sorted_recurrent_days(int(doc.plan_year), month)"/>
                                                    <span t-esc="', '.join([str(d) for d in month_days]) if month_days else ''"/>
                                                </t>
                                                <t t-else="">
                                                    <t t-set="event_date" t-value="event.start_date or event.start"/>
                                                    <t t-if="event_date and event_date.year == int(doc.plan_year) and event_date.month == month">
                                                        <span t-esc="event_date.day"/>
                                                    </t>
                                                </t>
                                            </td>
                                        </t>
                                        <td>
                                            <span t-esc="event.location or ''"/>
                                        </td>
                                        <td>
                                            <span t-field="event.user_id.name"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_annual_plan" model="ir.actions.report">
        <field name="name">Plan Anual</field>
        <field name="model">calendar_workplan.plan</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">calendar_workplan.report_annual_plan</field>
        <field name="report_file">calendar_workplan.report_annual_plan</field>
        <field name="binding_model_id" ref="model_calendar_workplan_plan"/>
        <field name="binding_type">report</field>
    </record>
</odoo>