<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_seleccionar_archivos_wizard_form" model="ir.ui.view">
        <field name="name">seleccionar.archivos.wizard.form</field>
        <field name="model">seleccionar.archivos.wizard</field>
        <field name="arch" type="xml">
            <form string="Seleccionar Archivos PDF">
                <div class="alert alert-info" role="alert">
                    <p><i class="fa fa-info-circle" /> Seleccione los archivos PDF que desea firmar
                        digitalmente.</p>
                    <p><strong>Tip:</strong> Puede agregar tantos archivos como necesite usando el
                        botón "Agregar línea".</p>
                </div>

                <group string="Archivos PDF a Seleccionar" col="1">
                    <field name="archivo_ids" nolabel="1" widget="one2many" mode="tree,form">
                        <tree create="true" edit="true" delete="true">
                            <field name="nombre_archivo" readonly="1" />
                            <field name="tamaño_archivo" />
                            <field name="archivo_pdf" filename="nombre_archivo" widget="binary" />
                        </tree>
                        <form>
                            <group>
                                <field name="archivo_pdf" filename="nombre_archivo" widget="binary"
                                    required="1" />
                                <field name="nombre_archivo" invisible="1" />
                                <field name="tamaño_archivo" readonly="1" />
                            </group>
                        </form>
                    </field>
                </group>

                <div class="alert alert-warning" role="alert" style="margin-top: 15px;">
                    <p>
                        <i class="fa fa-exclamation-triangle" />
                        <strong>Importante:</strong>
                    </p>
                    <ul>
                        <li>Solo se aceptan archivos con extensión .pdf</li>
                        <li>Asegúrese de que los archivos no estén dañados o protegidos</li>
                        <li>Use el botón "Agregar línea" para seleccionar múltiples archivos</li>
                    </ul>
                </div>

                <footer>
                    <button name="action_agregar_archivos"
                        string="✅ Agregar Archivos Seleccionados"
                        type="object"
                        class="btn-primary" />
                    <button string="Cancelar" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>