<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Crear nueva categorÃ­a para Alfresco -->
        <record id="module_category_services_alfresco" model="ir.module.category">
            <field name="name">Alfresco</field>
            <field name="sequence">10</field>
        </record>

        <!-- Grupo Administrador Alfresco -->
        <record id="group_alfresco_admin" model="res.groups">
            <field name="name">Administrador Alfresco</field>
            <field name="category_id" ref="module_category_services_alfresco"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <!-- Grupo Usuario Alfresco -->
        <record id="group_alfresco_user" model="res.groups">
            <field name="name">Usuario Alfresco</field>
            <field name="category_id" ref="module_category_services_alfresco"/>
            <field name="implied_ids" eval="[(4, ref('group_alfresco_admin'))]"/>
        </record>
    </data>
</odoo>