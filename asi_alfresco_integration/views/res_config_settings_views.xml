<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="alfresco_res_config_settings_view" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.alfresco.integration.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block"
                     data-string="Alfresco"
                     string="Alfresco"
                     data-key="asi_alfresco_integration">

                    <h2>Integración con Alfresco</h2>

                    <div class="row">
                        <!-- Columna izquierda: URL y Repo ID -->
                        <div class="col-md-6">
                            <div class="o_setting_box">
                                <div class="o_setting_left_pane">
                                    <h3>Servidor</h3>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="alfresco_server_url"/>
                                    <field name="alfresco_repo_id"/>
                                </div>
                            </div>
                        </div>

                        <!-- Columna derecha: Usuario y Contraseña -->
                        <div class="col-md-6">
                            <div class="o_setting_box">
                                <div class="o_setting_left_pane">
                                    <h3>Credenciales</h3>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="alfresco_username"/>
                                    <field name="alfresco_password" password="True"/>
                                    <div class="mt16">
                                        <button name="action_test_alfresco_connection"
                                                type="object"
                                                string="Probar Conexión"
                                                class="btn btn-secondary"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
