<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Acción para combustible no asignado -->
    <record id="action_fuel_unassigned" model="ir.actions.act_window">
        <field name="name">Combustible No Asignado</field>
        <field name="res_model">fuel.unassigned</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_fuel_unassigned_search"/>
        <field name="context">{'search_default_confirmed': 1, 'create': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay combustible no asignado
            </p>
            <p>
                El combustible no asignado se genera automáticamente cuando se confirma una factura de combustible.
                Para crear combustible no asignado, debe confirmar una factura de combustible.
            </p>
        </field>
    </record>
</odoo>

