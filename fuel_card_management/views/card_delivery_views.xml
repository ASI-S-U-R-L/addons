<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para entrega/devolución de tarjetas -->
    <record id="view_fuel_card_delivery_form" model="ir.ui.view">
        <field name="name">fuel.card.delivery.form</field>
        <field name="model">fuel.card.delivery</field>
        <field name="arch" type="xml">
            <form string="Entrega/Devolución de Tarjeta">
                <header>
                    <button name="action_confirm" type="object" string="Confirmar" 
                            class="oe_highlight" states="draft"/>
                    <button name="action_cancel" type="object" string="Cancelar" 
                            states="draft,confirmed"/>
                    <button name="action_reset_to_draft" type="object" string="Volver a Borrador" 
                            states="cancelled"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="delivery_type"/>
                            <field name="card_id" domain="[('active', '=', True)]"/>
                            <field name="balance" widget="monetary"/>
                        </group>
                        <group>
                            <field name="vehicle_id" 
                                   attrs="{'readonly': [('delivery_type', '=', 'return')],
                                          'required': [('delivery_type', '=', 'delivery')]}"/>
                            <field name="vehicle_custom_type" invisible="1"/>
                            <field name="engine_type" 
                                   attrs="{'invisible': [('vehicle_custom_type', '!=', 'tecnologico')],
                                          'required': [('vehicle_custom_type', '=', 'tecnologico'), ('delivery_type', '=', 'delivery')],
                                          'readonly': [('delivery_type', '=', 'return')]}"/>
                            <field name="driver_id" 
                                   attrs="{'readonly': [('delivery_type', '=', 'return')]}"/>
                        </group>
                    </group>
                    
                    <!-- Información de la tarjeta -->
                    <group string="Información de la Tarjeta" attrs="{'invisible': [('card_id', '=', False)]}">
                        <group>
                            <field name="card_type"/>
                            <field name="card_operational_state"/>
                        </group>
                        <group>
                            <field name="card_expiry_date"/>
                            <field name="card_current_driver_id" attrs="{'invisible': [('delivery_type', '!=', 'return')]}"/>
                            <field name="card_current_vehicle_id" attrs="{'invisible': [('delivery_type', '!=', 'return')]}"/>
                        </group>
                    </group>
                    
                    <group string="Notas">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de lista para entrega/devolución de tarjetas -->
    <record id="view_fuel_card_delivery_tree" model="ir.ui.view">
        <field name="name">fuel.card.delivery.tree</field>
        <field name="model">fuel.card.delivery</field>
        <field name="arch" type="xml">
            <tree string="Entregas/Devoluciones de Tarjetas" decoration-success="state=='confirmed'" 
                  decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="date"/>
                <field name="delivery_type"/>
                <field name="card_id"/>
                <field name="vehicle_id"/>
                <field name="vehicle_custom_type"/>
                <field name="engine_type" attrs="{'invisible': [('vehicle_custom_type', '!=', 'tecnologico')]}"/>
                <field name="driver_id"/>
                <field name="balance" widget="monetary"/>
                <field name="state" widget="badge" 
                       decoration-success="state=='confirmed'" 
                       decoration-info="state=='draft'"
                       decoration-muted="state=='cancelled'"/>
            </tree>
        </field>
    </record>

    <!-- Vista kanban para entrega/devolución de tarjetas -->
    <record id="view_fuel_card_delivery_kanban" model="ir.ui.view">
        <field name="name">fuel.card.delivery.kanban</field>
        <field name="model">fuel.card.delivery</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="date"/>
                <field name="delivery_type"/>
                <field name="card_id"/>
                <field name="vehicle_id"/>
                <field name="vehicle_custom_type"/>
                <field name="engine_type"/>
                <field name="driver_id"/>
                <field name="state"/>
                <field name="balance"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <span class="float-right badge badge-pill" 
                                      t-attf-class="badge-#{record.state.raw_value == 'confirmed' ? 'success' : record.state.raw_value == 'draft' ? 'info' : 'secondary'}">
                                    <field name="state"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <i class="fa fa-calendar"/> <field name="date"/>
                                </div>
                                <div>
                                    <i class="fa fa-credit-card"/> <field name="card_id"/>
                                </div>
                                <div>
                                    <i class="fa fa-car"/> <field name="vehicle_id"/>
                                    <t t-if="record.vehicle_custom_type.raw_value == 'tecnologico' and record.engine_type.raw_value">
                                        (<field name="engine_type"/>)
                                    </t>
                                </div>
                                <div t-if="record.driver_id.raw_value">
                                    <i class="fa fa-user"/> <field name="driver_id"/>
                                </div>
                                <div>
                                    <i class="fa fa-money"/> Saldo: <field name="balance" widget="monetary"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="view_fuel_card_delivery_search" model="ir.ui.view">
        <field name="name">fuel.card.delivery.search</field>
        <field name="model">fuel.card.delivery</field>
        <field name="arch" type="xml">
            <search string="Buscar Entregas/Devoluciones">
                <field name="name"/>
                <field name="card_id"/>
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <separator/>
                <filter name="filter_delivery" string="Entregas" domain="[('delivery_type', '=', 'delivery')]"/>
                <filter name="filter_return" string="Devoluciones" domain="[('delivery_type', '=', 'return')]"/>
                <separator/>
                <filter name="filter_draft" string="Borrador" domain="[('state', '=', 'draft')]"/>
                <filter name="filter_confirmed" string="Confirmado" domain="[('state', '=', 'confirmed')]"/>
                <filter name="filter_cancelled" string="Cancelado" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter name="filter_tecnologico" string="Vehículos Tecnológicos" domain="[('vehicle_custom_type', '=', 'tecnologico')]"/>
                <filter name="filter_movil" string="Vehículos Móviles" domain="[('vehicle_custom_type', '=', 'movil')]"/>
                <filter name="filter_estacionario" string="Vehículos Estacionarios" domain="[('vehicle_custom_type', '=', 'estacionario')]"/>
                <separator/>
                <filter name="filter_today" string="Hoy" domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_week" string="Esta Semana" domain="[('date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_month" string="Este Mes" domain="[('date', '&gt;=', context_today().strftime('%Y-%m-01'))]"/>
                <group expand="0" string="Agrupar por">
                    <filter name="group_delivery_type" string="Tipo de Operación" context="{'group_by': 'delivery_type'}"/>
                    <filter name="group_vehicle_type" string="Tipo de Vehículo" context="{'group_by': 'vehicle_custom_type'}"/>
                    <filter name="group_state" string="Estado" context="{'group_by': 'state'}"/>
                    <filter name="group_date" string="Fecha" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción para entrega/devolución de tarjetas -->
    <record id="action_fuel_card_delivery" model="ir.actions.act_window">
        <field name="name">Entregas/Devoluciones de Tarjetas</field>
        <field name="res_model">fuel.card.delivery</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_fuel_card_delivery_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Crea tu primera entrega/devolución de tarjeta!
            </p>
            <p>
                Gestiona las entregas y devoluciones de tarjetas magnéticas de combustible.
                Para vehículos tecnológicos puedes asignar hasta 2 tarjetas (una por motor).
                <br/><strong>Nota:</strong> Es obligatorio seleccionar un vehículo para realizar entregas.
            </p>
        </field>
    </record>
</odoo>
