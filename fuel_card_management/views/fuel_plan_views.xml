<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para planes de combustible -->
    <record id="view_fuel_plan_form" model="ir.ui.view">
        <field name="name">fuel.plan.form</field>
        <field name="model">fuel.plan</field>
        <field name="arch" type="xml">
            <form string="Plan de Combustible">
                <header>
                    <!-- CORREGIDO: Cambiado group_fuel_card_user por group_fuel_card_logistic -->
                    <button name="action_generate_distribution" string="Generar Distribución" type="object" class="oe_highlight" 
                            attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('distribution_ids', '!=', [])]}" 
                            groups="fuel_card_management.group_fuel_card_logistic,fuel_card_management.group_fuel_card_admin"/>
                    
                    <button name="action_send_for_approval" string="Enviar para Aprobación" type="object" class="oe_highlight" 
                            attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('distribution_ids', '=', [])]}" 
                            groups="fuel_card_management.group_fuel_card_logistic,fuel_card_management.group_fuel_card_admin"/>
                    
                    <!-- CORREGIDO: Cambiado group_fuel_card_manager por group_fuel_card_director -->
                    <button name="action_save_director_changes" string="Guardar Cambios" type="object" class="oe_highlight" 
                            attrs="{'invisible': [('state', '!=', 'pending_approval')]}" 
                            groups="fuel_card_management.group_fuel_card_director,fuel_card_management.group_fuel_card_admin"/>
                    
                    <button name="action_approve" string="Aprobar" type="object" class="oe_highlight" 
                            attrs="{'invisible': [('state', '!=', 'pending_approval')]}" 
                            groups="fuel_card_management.group_fuel_card_director,fuel_card_management.group_fuel_card_admin"/>
                    
                    <button name="action_reject" string="Rechazar" type="object" 
                            attrs="{'invisible': [('state', '!=', 'pending_approval')]}" 
                            groups="fuel_card_management.group_fuel_card_director,fuel_card_management.group_fuel_card_admin"/>
                    
                    <button name="action_reset_to_draft" string="Volver a Borrador" type="object" 
                            attrs="{'invisible': [('state', 'not in', ['rejected', 'pending_approval'])]}" 
                            groups="fuel_card_management.group_fuel_card_logistic,fuel_card_management.group_fuel_card_admin"/>
                    
                    <button name="action_cancel" string="Cancelar" type="object" 
                            attrs="{'invisible': [('state', 'in', ['cancelled', 'approved'])]}" 
                            groups="fuel_card_management.group_fuel_card_logistic,fuel_card_management.group_fuel_card_admin"/>
                    
                    <field name="state" widget="statusbar" statusbar_visible="draft,pending_approval,approved,rejected"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <!-- Sección de información del combustible no asignado -->
                    <group string="Información del Combustible">
                        <group>
                            <field name="date"/>
                            <field name="unassigned_fuel_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="carrier_id"/>
                        </group>
                        <group>
                            <field name="invoiced_fuel" string="Combustible Disponible (L)"/>
                            <field name="director_id" attrs="{'required': [('state', '=', 'draft')]}"/>
                            <field name="modified_by_director" invisible="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Distribución entre Tarjetas">
                            <field name="distribution_ids" attrs="{'readonly': [('state', 'in', ['approved', 'rejected', 'cancelled'])]}">
                                <tree editable="bottom">
                                    <field name="card_id"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Comentarios del Director">
                            <field name="director_comments" attrs="{'readonly': [('state', 'not in', ['pending_approval', 'approved', 'rejected'])]}"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de árbol para planes de combustible -->
    <record id="view_fuel_plan_tree" model="ir.ui.view">
        <field name="name">fuel.plan.tree</field>
        <field name="model">fuel.plan</field>
        <field name="arch" type="xml">
            <tree string="Planes de Combustible" 
                  decoration-success="state == 'approved'" 
                  decoration-danger="state == 'rejected'" 
                  decoration-warning="state == 'pending_approval'" 
                  decoration-muted="state == 'cancelled'" 
                  decoration-info="state == 'draft'">
                <field name="name"/>
                <field name="date"/>
                <field name="unassigned_fuel_id"/>
                <field name="carrier_id"/>
                <field name="invoiced_fuel"/>
                <field name="director_id"/>
                <field name="modified_by_director"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Vista de búsqueda para planes de combustible -->
    <record id="view_fuel_plan_search" model="ir.ui.view">
        <field name="name">fuel.plan.search</field>
        <field name="model">fuel.plan</field>
        <field name="arch" type="xml">
            <search string="Buscar Planes de Combustible">
                <field name="name"/>
                <field name="unassigned_fuel_id"/>
                <field name="carrier_id"/>
                <field name="director_id"/>
                <filter string="Borrador" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Pendiente de Aprobación" name="pending_approval" domain="[('state', '=', 'pending_approval')]"/>
                <filter string="Aprobado" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Rechazado" name="rejected" domain="[('state', '=', 'rejected')]"/>
                <filter string="Cancelado" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <filter string="Modificado por Director" name="modified_by_director" domain="[('modified_by_director', '=', True)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Combustible No Asignado" name="unassigned_fuel_id" context="{'group_by': 'unassigned_fuel_id'}"/>
                    <filter string="Portador" name="carrier_id" context="{'group_by': 'carrier_id'}"/>
                    <filter string="Director" name="director_id" context="{'group_by': 'director_id'}"/>
                    <filter string="Fecha" name="date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
