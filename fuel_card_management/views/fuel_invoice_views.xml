<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para facturas de combustible -->
    <record id="view_fuel_invoice_form" model="ir.ui.view">
        <field name="name">fuel.invoice.form</field>
        <field name="model">fuel.invoice</field>
        <field name="arch" type="xml">
            <form string="Factura de Combustible">
                <header>
                    <button name="action_confirm" string="Confirmar" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_cancel" string="Cancelar" type="object" attrs="{'invisible': [('state', '=', 'cancelled')]}"/>
                    <button name="action_reset_to_draft" string="Volver a Borrador" type="object" attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="invoice_number"/>
                            <field name="date"/>
                            <field name="carrier_id" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="unit_price" readonly="1"/>
                            <field name="total_amount" readonly="1"/>
                            <field name="unassigned_amount" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Combustible No Asignado" attrs="{'invisible': [('state', '!=', 'confirmed')]}">
                            <field name="unassigned_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="carrier_id"/>
                                    <field name="amount"/>
                                    <field name="unit_price"/>
                                    <field name="total_amount"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notas">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de árbol para facturas de combustible -->
    <record id="view_fuel_invoice_tree" model="ir.ui.view">
        <field name="name">fuel.invoice.tree</field>
        <field name="model">fuel.invoice</field>
        <field name="arch" type="xml">
            <tree string="Facturas de Combustible" decoration-success="state == 'confirmed'" decoration-muted="state == 'cancelled'" decoration-info="state == 'draft'">
                <field name="name"/>
                <field name="invoice_number"/>
                <field name="date"/>
                <field name="carrier_id"/>
                <field name="amount"/>
                <field name="unit_price"/>
                <field name="total_amount"/>
                <field name="unassigned_amount" invisible="1"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Vista de búsqueda para facturas de combustible -->
    <record id="view_fuel_invoice_search" model="ir.ui.view">
        <field name="name">fuel.invoice.search</field>
        <field name="model">fuel.invoice</field>
        <field name="arch" type="xml">
            <search string="Buscar Facturas de Combustible">
                <field name="name"/>
                <field name="invoice_number"/>
                <field name="carrier_id"/>
                <filter string="Borrador" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmado" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Cancelado" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <filter string="Con Combustible No Asignado" name="with_unassigned" domain="[('unassigned_amount', '>', 0)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Portador" name="carrier_id" context="{'group_by': 'carrier_id'}"/>
                    <filter string="Fecha" name="date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
