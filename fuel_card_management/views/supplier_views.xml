<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para proveedores de combustible -->
    <record id="view_fuel_supplier_form" model="ir.ui.view">
        <field name="name">fuel.supplier.form</field>
        <field name="model">fuel.supplier</field>
        <field name="arch" type="xml">
            <form string="Proveedor de Combustible">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_fuel_magnetic_card)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-credit-card"
                                context="{'search_default_supplier_id': active_id}">
                            <field name="card_count" string="Tarjetas" widget="statinfo"/>
                        </button>
                        <button name="%(action_fuel_invoice)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-file-text-o"
                                context="{'search_default_supplier_id': active_id}">
                            <field name="invoice_count" string="Facturas" widget="statinfo"/>
                        </button>
                    </div>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archivado" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del Proveedor"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="card_type"/>
                        </group>
                        <group>
                            <field name="contract_number"/>
                            <field name="contract_start_date"/>
                            <field name="contract_end_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tarjetas">
                            <field name="card_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="card_type"/>
                                    <field name="vehicle_id"/>
                                    <field name="generator_id"/>
                                    <field name="current_balance"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Facturas">
                            <field name="invoice_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="invoice_number"/>
                                    <field name="date"/>
                                    <field name="amount"/>
                                    <field name="unit_price"/>
                                    <field name="total_amount"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notas">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de árbol para proveedores de combustible -->
    <record id="view_fuel_supplier_tree" model="ir.ui.view">
        <field name="name">fuel.supplier.tree</field>
        <field name="model">fuel.supplier</field>
        <field name="arch" type="xml">
            <tree string="Proveedores de Combustible">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="card_type"/>
                <field name="contract_number"/>
                <field name="contract_start_date"/>
                <field name="contract_end_date"/>
                <field name="card_count"/>
                <field name="invoice_count"/>
            </tree>
        </field>
    </record>

    <!-- Vista de búsqueda para proveedores de combustible -->
    <record id="view_fuel_supplier_search" model="ir.ui.view">
        <field name="name">fuel.supplier.search</field>
        <field name="model">fuel.supplier</field>
        <field name="arch" type="xml">
            <search string="Buscar Proveedores de Combustible">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="contract_number"/>
                <filter string="Tarjeta Física" name="physical" domain="[('card_type', '=', 'physical')]"/>
                <filter string="Tarjeta Virtual" name="virtual" domain="[('card_type', '=', 'virtual')]"/>
                <filter string="Ambas" name="both" domain="[('card_type', '=', 'both')]"/>
                <filter string="Archivados" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Tipo de Tarjeta" name="card_type" context="{'group_by': 'card_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción para proveedores de combustible -->
    <record id="action_fuel_supplier" model="ir.actions.act_window">
        <field name="name">Proveedores de Combustible</field>
        <field name="res_model">fuel.supplier</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_fuel_supplier_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo proveedor de combustible
            </p>
            <p>
                Los proveedores de combustible son las empresas que emiten las tarjetas de combustible.
            </p>
        </field>
    </record>

  
</odoo>

