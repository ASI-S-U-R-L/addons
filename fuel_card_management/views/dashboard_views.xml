<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fuel_magnetic_card_kanban_dashboard" model="ir.ui.view">
        <field name="name">fuel.magnetic.card.kanban.dashboard</field>
        <field name="model">fuel.magnetic.card</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <field name="name"/>
                <field name="operational_state"/>
                <field name="card_type"/>
                <field name="carrier_id"/>
                <field name="vehicle_id"/>
                <field name="current_balance"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section">
                                    <span class="badge rounded-pill text-bg-info" 
                                          t-attf-class="badge rounded-pill text-bg-#{record.operational_state.raw_value == 'assigned' ? 'success' : record.operational_state.raw_value == 'available' ? 'info' : record.operational_state.raw_value == 'blocked' ? 'warning' : 'danger'}">
                                        <field name="operational_state"/>
                                    </span>
                                    <span class="badge rounded-pill text-bg-secondary">
                                        <field name="card_type"/>
                                    </span>
                                </div>
                                <ul>
                                    <li t-if="record.carrier_id.raw_value">
                                        <i class="fa fa-gas-pump"/> <field name="carrier_id"/>
                                    </li>
                                    <li t-if="record.vehicle_id.raw_value">
                                        <i class="fa fa-car"/> <field name="vehicle_id"/>
                                    </li>
                                    <li>
                                        <i class="fa fa-money"/> Saldo: <field name="current_balance" widget="monetary"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>

