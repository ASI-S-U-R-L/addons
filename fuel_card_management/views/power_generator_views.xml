<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para generadores de energía -->
    <record id="view_fuel_power_generator_form" model="ir.ui.view">
        <field name="name">fuel.power.generator.form</field>
        <field name="model">fuel.power.generator</field>
        <field name="arch" type="xml">
            <form string="Generador de Energía">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_fuel_magnetic_card)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-credit-card"
                                context="{'search_default_generator_id': active_id}">
                            <field name="card_count" string="Tarjetas" widget="statinfo"/>
                        </button>
                        <button name="%(action_fuel_ticket)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-tint"
                                context="{'search_default_generator_id': active_id}">
                            <field name="total_consumption" string="Consumo (L)" widget="statinfo"/>
                        </button>
                    </div>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archivado" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del Generador"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="serial_number"/>
                            <field name="model"/>
                            <field name="brand"/>
                            <field name="fuel_type"/>
                        </group>
                        <group>
                            <field name="location"/>
                            <field name="department"/>
                            <field name="tank_capacity"/>
                            <field name="power"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="purchase_date"/>
                            <field name="warranty_end_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tarjetas Asignadas">
                            <field name="card_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="supplier_id"/>
                                    <field name="current_balance"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Consumo de Combustible">
                            <field name="consumption_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="card_id"/>
                                    <field name="liters"/>
                                    <field name="unit_price"/>
                                    <field name="amount"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notas">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de árbol para generadores de energía -->
    <record id="view_fuel_power_generator_tree" model="ir.ui.view">
        <field name="name">fuel.power.generator.tree</field>
        <field name="model">fuel.power.generator</field>
        <field name="arch" type="xml">
            <tree string="Generadores de Energía">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="model"/>
                <field name="brand"/>
                <field name="location"/>
                <field name="fuel_type"/>
                <field name="tank_capacity"/>
                <field name="total_consumption"/>
            </tree>
        </field>
    </record>

    <!-- Vista de búsqueda para generadores de energía -->
    <record id="view_fuel_power_generator_search" model="ir.ui.view">
        <field name="name">fuel.power.generator.search</field>
        <field name="model">fuel.power.generator</field>
        <field name="arch" type="xml">
            <search string="Buscar Generadores de Energía">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="model"/>
                <field name="brand"/>
                <field name="location"/>
                <field name="department"/>
                <filter string="Diesel" name="diesel" domain="[('fuel_type', '=', 'diesel')]"/>
                <filter string="Gasolina" name="gasoline" domain="[('fuel_type', '=', 'gasoline')]"/>
                <filter string="Otro" name="other" domain="[('fuel_type', '=', 'other')]"/>
                <filter string="Archivados" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Tipo de Combustible" name="fuel_type" context="{'group_by': 'fuel_type'}"/>
                    <filter string="Ubicación" name="location" context="{'group_by': 'location'}"/>
                    <filter string="Departamento" name="department" context="{'group_by': 'department'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción para generadores de energía -->
    <record id="action_fuel_power_generator" model="ir.actions.act_window">
        <field name="name">Generadores de Energía</field>
        <field name="res_model">fuel.power.generator</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_fuel_power_generator_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo generador de energía
            </p>
            <p>
                Los generadores de energía son equipos que consumen combustible para generar electricidad.
            </p>
        </field>
    </record>

</odoo>

