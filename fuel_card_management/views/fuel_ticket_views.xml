<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario con secuencia diaria automática -->
    <record id="view_fuel_ticket_form" model="ir.ui.view">
        <field name="name">fuel.ticket.form</field>
        <field name="model">fuel.ticket</field>
        <field name="arch" type="xml">
            <form string="Ticket de Combustible">
                <header>
                    <button name="action_confirm" string="Confirmar" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_cancel" string="Cancelar" type="object" 
                            attrs="{'invisible': [('state', '=', 'cancelled')]}"/>
                    <button name="action_reset_to_draft" string="Volver a Borrador" type="object" 
                            attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,cancelled"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    
                    <!-- Alerta corregida para capacidad excedida -->
                    <div class="alert alert-warning" role="alert" 
                         attrs="{'invisible': ['|', ('card_type', '!=', 'vehicle'), ('tank_capacity_exceeded', '=', False)]}">
                        <field name="tank_capacity_exceeded" invisible="1"/>
                        <strong>⚠️ Advertencia:</strong> La carga excede la capacidad del tanque.
                    </div>
                    
                    <!-- Información básica en dos columnas -->
                    <group>
                        <group string="Información General">
                            <field name="date"/>
                            <!-- Campo day_sequence automático y de solo lectura -->
                            <field name="day_sequence" readonly="1" string="Secuencia del Día" 
                                   help="Se calcula automáticamente según el orden de tickets del día para esta tarjeta"/>
                            <field name="card_id" domain="[('state', '=', 'assigned')]"/>
                            <field name="card_type" invisible="1"/>
                            <field name="carrier_id" readonly="1"/>
                            <field name="supplier_id" readonly="1"/>
                            <field name="initial_fuel_manual" attrs="{'required': [('is_first_ticket', '=', True)], 
                                                                     'invisible': [('is_first_ticket', '=', False)]}" 
                                   string="Combustible Inicial (L)"/>
                        </group>
                        <group string="Combustible y Costos">
                            <field name="liters" required="1"/>
                            <field name="unit_price" readonly="1"/>
                            <field name="amount" readonly="1"/>
                            <field name="initial_balance" readonly="1"/>
                            <field name="final_balance" readonly="1"/>
                        </group>
                    </group>
                    
                    <!-- Información específica según tipo de tarjeta -->
                    <group string="Asignación">
                        <!-- Para vehículos -->
                        <group attrs="{'invisible': [('card_type', '!=', 'vehicle')]}">
                            <field name="vehicle_id" readonly="1"/>
                            <field name="driver_id" readonly="1"/>
                            <field name="odometer" attrs="{'required': [('card_type', '=', 'vehicle')]}"/>
                        </group>
                        
                        <!-- Para generadores -->
                        <group attrs="{'invisible': [('card_type', '!=', 'generator')]}">
                            <field name="generator_id" readonly="1"/>
                            <field name="generator_responsible_id" readonly="1" string="Responsable"/>
                        </group>
                        
                        <!-- Para otros -->
                        <group attrs="{'invisible': [('card_type', '!=', 'other')]}">
                            <field name="general_responsible_id" readonly="1" string="Responsable"/>
                        </group>
                    </group>
                    
                    <!-- Información de vehículo (solo si es vehículo) -->
                    <group string="Información del Vehículo" 
                           attrs="{'invisible': [('card_type', '!=', 'vehicle')]}">
                        <group>
                            <field name="distance_traveled" readonly="1" string="Distancia (km)"/>
                            <field name="fuel_consumed" readonly="1" string="Combustible Consumido (L)"/>
                            <field name="current_fuel_in_tank" readonly="1" string="Combustible en Tanque (L)"/>
                        </group>
                        <group>
                            <field name="vehicle_tank_capacity" readonly="1" string="Capacidad Tanque (L)"/>
                            <field name="fuel_after_fill" readonly="1" string="Combustible Después (L)"/>
                            <field name="tank_fill_type" readonly="1" string="Tipo de Carga"/>
                        </group>
                    </group>
                    
                    <!-- Campos ocultos para cálculos -->
                    <group invisible="1">
                        <field name="vehicle_responsible_id"/>
                        <field name="previous_odometer"/>
                        <field name="fuel_efficiency"/>
                        <field name="estimated_range"/>
                        <field name="remaining_fuel_before"/>
                        <field name="tank_capacity_exceeded"/>
                        <field name="is_first_ticket"/>
                        <field name="vehicle_fuel_type"/>
                        <field name="vehicle_avg_consumption"/>
                        <field name="tank_fill_percentage"/>
                    </group>
                    
                    <!-- Notas -->
                    <group string="Notas" attrs="{'invisible': [('notes', '=', False)]}">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de árbol con secuencia visible -->
    <record id="view_fuel_ticket_tree" model="ir.ui.view">
        <field name="name">fuel.ticket.tree</field>
        <field name="model">fuel.ticket</field>
        <field name="arch" type="xml">
            <tree string="Tickets de Combustible" 
                  decoration-success="state == 'confirmed'" 
                  decoration-muted="state == 'cancelled'" 
                  decoration-info="state == 'draft'"
                  decoration-warning="tank_capacity_exceeded == True">
                <field name="name"/>
                <field name="date"/>
                <!-- Campo day_sequence visible para todos los usuarios -->
                <field name="day_sequence" string="Sec." optional="show"/>
                <field name="card_id"/>
                <field name="vehicle_id" optional="show"/>
                <field name="generator_id" optional="hide"/>
                <field name="driver_id" optional="show"/>
                <field name="liters"/>
                <field name="amount"/>
                <field name="odometer" optional="show"/>
                <field name="distance_traveled" optional="hide"/>
                <field name="tank_capacity_exceeded" invisible="1"/>
                <field name="card_type" invisible="1"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Vista de búsqueda actualizada -->
    <record id="view_fuel_ticket_search" model="ir.ui.view">
        <field name="name">fuel.ticket.search</field>
        <field name="model">fuel.ticket</field>
        <field name="arch" type="xml">
            <search string="Buscar Tickets">
                <field name="name"/>
                <field name="card_id"/>
                <field name="vehicle_id"/>
                <field name="generator_id"/>
                <field name="driver_id"/>
                <!-- Campo day_sequence disponible para búsqueda -->
                <field name="day_sequence"/>
                
                <!-- Filtros principales -->
                <filter string="Vehículos" name="vehicle_tickets" domain="[('card_type', '=', 'vehicle')]"/>
                <filter string="Generadores" name="generator_tickets" domain="[('card_type', '=', 'generator')]"/>
                <filter string="Otros" name="other_tickets" domain="[('card_type', '=', 'other')]"/>
                
                <separator/>
                <filter string="Borrador" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmado" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Cancelado" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                
                <separator/>
                <filter string="Hoy" name="today" domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Esta Semana" name="this_week" domain="[('date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="Este Mes" name="this_month" domain="[('date', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Tipo de Tarjeta" name="card_type" context="{'group_by': 'card_type'}"/>
                    <filter string="Tarjeta" name="card_id" context="{'group_by': 'card_id'}"/>
                    <filter string="Vehículo" name="vehicle_id" context="{'group_by': 'vehicle_id'}"/>
                    <filter string="Fecha" name="date" context="{'group_by': 'date'}"/>
                    <!-- Agrupación por secuencia del día -->
                    <filter string="Secuencia del Día" name="day_sequence" context="{'group_by': 'day_sequence'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
