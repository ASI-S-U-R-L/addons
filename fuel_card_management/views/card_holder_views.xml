<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para titulares de tarjetas -->
    <record id="view_fuel_card_holder_form" model="ir.ui.view">
        <field name="name">fuel.card.holder.form</field>
        <field name="model">fuel.card.holder</field>
        <field name="arch" type="xml">
            <form string="Titular de Tarjeta">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_fuel_magnetic_card)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-credit-card"
                                context="{'search_default_holder_id': active_id}">
                            <field name="card_count" string="Tarjetas" widget="statinfo"/>
                        </button>
                    </div>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archivado" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del Titular"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="identification"/>
                        </group>
                        <group>
                            <field name="position"/>
                            <field name="department"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tarjetas Asignadas">
                            <field name="card_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="card_type"/>
                                    <field name="vehicle_id"/>
                                    <field name="generator_id"/>
                                    <field name="current_balance"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notas">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de árbol para titulares de tarjetas -->
    <record id="view_fuel_card_holder_tree" model="ir.ui.view">
        <field name="name">fuel.card.holder.tree</field>
        <field name="model">fuel.card.holder</field>
        <field name="arch" type="xml">
            <tree string="Titulares de Tarjeta">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="identification"/>
                <field name="position"/>
                <field name="department"/>
                <field name="card_count"/>
            </tree>
        </field>
    </record>

    <!-- Vista de búsqueda para titulares de tarjetas -->
    <record id="view_fuel_card_holder_search" model="ir.ui.view">
        <field name="name">fuel.card.holder.search</field>
        <field name="model">fuel.card.holder</field>
        <field name="arch" type="xml">
            <search string="Buscar Titulares de Tarjeta">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="identification"/>
                <field name="position"/>
                <field name="department"/>
                <filter string="Archivados" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Departamento" name="department" context="{'group_by': 'department'}"/>
                    <filter string="Cargo" name="position" context="{'group_by': 'position'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción para titulares de tarjetas -->
    <record id="action_fuel_card_holder" model="ir.actions.act_window">
        <field name="name">Titulares de Tarjeta</field>
        <field name="res_model">fuel.card.holder</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_fuel_card_holder_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo titular de tarjeta
            </p>
            <p>
                Los titulares de tarjeta son las personas a las que se les asignan las tarjetas de combustible.
            </p>
        </field>
    </record>


</odoo>

