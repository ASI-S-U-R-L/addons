<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fuel_carrier_form" model="ir.ui.view">
        <field name="name">fuel.carrier.form</field>
        <field name="model">fuel.carrier</field>
        <field name="arch" type="xml">
            <form string="Portador de Combustible">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_cards" type="object" class="oe_stat_button" icon="fa-credit-card">
                            <field name="card_count" widget="statinfo" string="Tarjetas"/>
                        </button>
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del Portador"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="current_price"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Historial de Precios">
                            <field name="price_history_ids">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="price"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_fuel_carrier_tree" model="ir.ui.view">
        <field name="name">fuel.carrier.tree</field>
        <field name="model">fuel.carrier</field>
        <field name="arch" type="xml">
            <tree string="Portadores de Combustible" decoration-muted="active == False">
                <field name="name"/>
                <field name="current_price"/>
                <field name="card_count"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_fuel_carrier_search" model="ir.ui.view">
        <field name="name">fuel.carrier.search</field>
        <field name="model">fuel.carrier</field>
        <field name="arch" type="xml">
            <search string="Buscar Portadores de Combustible">
                <field name="name"/>
                <filter string="Archivado" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Precio Actual" name="current_price" context="{'group_by': 'current_price'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_fuel_carrier" model="ir.actions.act_window">
        <field name="name">Portadores de Combustible</field>
        <field name="res_model">fuel.carrier</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo portador de combustible
            </p>
            <p>
                Los portadores de combustible representan los diferentes tipos de combustible
                (diesel, gasolina, etc.) con sus respectivos precios por litro.
            </p>
        </field>
    </record>

   
</odoo>

