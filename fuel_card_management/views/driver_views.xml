<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para conductores -->
    <record id="view_fuel_driver_form" model="ir.ui.view">
        <field name="name">fuel.driver.form</field>
        <field name="model">fuel.driver</field>
        <field name="arch" type="xml">
            <form string="Conductor">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_fuel_magnetic_card)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-credit-card"
                                context="{'search_default_driver_id': active_id}">
                            <field name="card_count" string="Tarjetas" widget="statinfo"/>
                        </button>
                        <button name="%(fleet.fleet_vehicle_action)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-car"
                                context="{'search_default_driver_id': partner_id}">
                            <field name="vehicle_count" string="Vehículos" widget="statinfo"/>
                        </button>
                        <button name="%(action_fuel_ticket)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-tint"
                                context="{'search_default_driver_id': active_id}">
                            <field name="total_consumption" string="Consumo (L)" widget="statinfo"/>
                        </button>
                    </div>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archivado" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del Conductor"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="license_number"/>
                            <field name="license_type"/>
                            <field name="license_expiry"/>
                        </group>
                        <group>
                            <field name="department"/>
                            <field name="position"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Vehículos Asignados">
                            <field name="vehicle_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="model_id"/>
                                    <field name="license_plate"/>
                                    <field name="odometer"/>
                                    <field name="fuel_type"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Tarjetas Asignadas">
                            <field name="card_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="card_type"/>
                                    <field name="vehicle_id"/>
                                    <field name="current_balance"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Consumo de Combustible">
                            <field name="consumption_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="card_id"/>
                                    <field name="vehicle_id"/>
                                    <field name="liters"/>
                                    <field name="unit_price"/>
                                    <field name="amount"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notas">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de árbol para conductores -->
    <record id="view_fuel_driver_tree" model="ir.ui.view">
        <field name="name">fuel.driver.tree</field>
        <field name="model">fuel.driver</field>
        <field name="arch" type="xml">
            <tree string="Conductores">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="license_number"/>
                <field name="license_type"/>
                <field name="license_expiry"/>
                <field name="department"/>
                <field name="position"/>
                <field name="vehicle_count"/>
                <field name="card_count"/>
                <field name="total_consumption"/>
            </tree>
        </field>
    </record>

    <!-- Vista de búsqueda para conductores -->
    <record id="view_fuel_driver_search" model="ir.ui.view">
        <field name="name">fuel.driver.search</field>
        <field name="model">fuel.driver</field>
        <field name="arch" type="xml">
            <search string="Buscar Conductores">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="license_number"/>
                <field name="department"/>
                <field name="position"/>
                <filter string="Licencia Vencida" name="expired_license" domain="[('license_expiry', '&lt;', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Licencia por Vencer" name="expiring_license" domain="[('license_expiry', '&gt;=', context_today().strftime('%Y-%m-%d')), ('license_expiry', '&lt;=', (context_today() + datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                <filter string="Archivados" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Departamento" name="department" context="{'group_by': 'department'}"/>
                    <filter string="Cargo" name="position" context="{'group_by': 'position'}"/>
                    <filter string="Tipo de Licencia" name="license_type" context="{'group_by': 'license_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción para conductores -->
    <record id="action_fuel_driver" model="ir.actions.act_window">
        <field name="name">Conductores</field>
        <field name="res_model">fuel.driver</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_fuel_driver_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo conductor
            </p>
            <p>
                Los conductores son las personas que conducen los vehículos y utilizan las tarjetas de combustible.
            </p>
        </field>
    </record>

    
</odoo>

