<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron para verificar tarjetas vencidas -->
        <record id="ir_cron_check_expired_cards" model="ir.cron">
            <field name="name">Verificar tarjetas de combustible vencidas</field>
            <field name="model_id" ref="model_fuel_magnetic_card"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_expired_cards()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">False</field>
            <field name="active">True</field>
            <field name="user_id" ref="base.user_root"/>
        </record>

        <!-- Cron para notificar tarjetas próximas a vencer (30 días antes) -->
        <record id="ir_cron_notify_expiring_cards" model="ir.cron">
            <field name="name">Notificar tarjetas próximas a vencer</field>
            <field name="model_id" ref="model_fuel_magnetic_card"/>
            <field name="state">code</field>
            <field name="code">model._cron_notify_expiring_cards()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">False</field>
            <field name="active">True</field>
            <field name="user_id" ref="base.user_root"/>
        </record>
    </data>
</odoo>