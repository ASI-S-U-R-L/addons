<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_card_balance">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Informe de Saldo de Tarjetas</h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto">
                            <strong>Fecha:</strong>
                            <p t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                        </div>
                    </div>
                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th>Tarjeta</th>
                                <th>Proveedor</th>
                                <th>Tipo</th>
                                <th>Asignación</th>
                                <th>Estado</th>
                                <th class="text-right">Saldo</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="docs" t-as="card">
                                <td><span t-field="card.name"/></td>
                                <td><span t-field="card.supplier_id.name"/></td>
                                <td><span t-field="card.card_type"/></td>
                                <td>
                                    <t t-if="card.vehicle_id">
                                        <span t-field="card.vehicle_id.name"/>
                                    </t>
                                    <t t-elif="card.generator_id">
                                        <span t-field="card.generator_id.name"/>
                                    </t>
                                    <t t-else="">
                                        -
                                    </t>
                                </td>
                                <td><span t-field="card.state"/></td>
                                <td class="text-right"><span t-field="card.current_balance"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

    <template id="report_fuel_consumption">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Informe de Consumo de Combustible</h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto">
                            <strong>Fecha:</strong>
                            <p t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                        </div>
                    </div>
                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th>Referencia</th>
                                <th>Fecha</th>
                                <th>Tarjeta</th>
                                <th>Vehículo/Generador</th>
                                <th>Conductor</th>
                                <th class="text-right">Litros</th>
                                <th class="text-right">Importe</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="docs" t-as="ticket">
                                <td><span t-field="ticket.name"/></td>
                                <td><span t-field="ticket.date"/></td>
                                <td><span t-field="ticket.card_id.name"/></td>
                                <td>
                                    <t t-if="ticket.vehicle_id">
                                        <span t-field="ticket.vehicle_id.name"/>
                                    </t>
                                    <t t-elif="ticket.generator_id">
                                        <span t-field="ticket.generator_id.name"/>
                                    </t>
                                    <t t-else="">
                                        -
                                    </t>
                                </td>
                                <td>
                                    <t t-if="ticket.driver_id">
                                        <span t-field="ticket.driver_id.name"/>
                                    </t>
                                    <t t-else="">
                                        -
                                    </t>
                                </td>
                                <td class="text-right"><span t-field="ticket.liters"/></td>
                                <td class="text-right"><span t-field="ticket.amount"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

    <record id="action_report_card_balance" model="ir.actions.report">
        <field name="name">Informe de Saldo de Tarjetas</field>
        <field name="model">fuel.magnetic.card</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">fuel_card_management.report_card_balance</field>
        <field name="report_file">fuel_card_management.report_card_balance</field>
        <field name="binding_model_id" ref="model_fuel_magnetic_card"/>
        <field name="binding_type">report</field>
    </record>

    <record id="action_report_fuel_consumption" model="ir.actions.report">
        <field name="name">Informe de Consumo de Combustible</field>
        <field name="model">fuel.ticket</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">fuel_card_management.report_fuel_consumption</field>
        <field name="report_file">fuel_card_management.report_fuel_consumption</field>
        <field name="binding_model_id" ref="model_fuel_ticket"/>
        <field name="binding_type">report</field>
    </record>
</odoo>