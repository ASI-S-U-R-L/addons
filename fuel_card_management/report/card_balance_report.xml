<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_card_balance_report" model="ir.actions.act_window">
        <field name="name">Informe de Saldo de Tarjetas</field>
        <field name="res_model">fuel.magnetic.card</field>
        <field name="view_mode">pivot,graph,tree,form</field>
        <field name="context">{'search_default_assigned': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay datos de saldo de tarjetas disponibles
            </p>
            <p>
                Cree tarjetas magn√©ticas para ver el informe de saldo.
            </p>
        </field>
    </record>

    <record id="view_fuel_magnetic_card_pivot" model="ir.ui.view">
        <field name="name">fuel.magnetic.card.pivot</field>
        <field name="model">fuel.magnetic.card</field>
        <field name="arch" type="xml">
            <pivot string="Saldo de Tarjetas" display_quantity="true">
                <field name="supplier_id" type="row"/>
                <field name="card_type" type="row"/>
                <field name="state" type="row"/>
                <field name="current_balance" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_fuel_magnetic_card_graph" model="ir.ui.view">
        <field name="name">fuel.magnetic.card.graph</field>
        <field name="model">fuel.magnetic.card</field>
        <field name="arch" type="xml">
            <graph string="Saldo de Tarjetas" type="pie">
                <field name="state"/>
                <field name="current_balance" type="measure"/>
            </graph>
        </field>
    </record>

    
</odoo>

