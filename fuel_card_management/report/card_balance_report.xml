<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Acción para tarjetas con saldo bajo -->
    <record id="action_low_balance_cards" model="ir.actions.act_window">
        <field name="name">Tarjetas con Saldo Bajo</field>
        <field name="res_model">fuel.magnetic.card</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[('current_balance', '&lt;', 100), ('operational_state', '=', 'assigned')]</field>
        <field name="context">{'search_default_low_balance': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay tarjetas con saldo bajo
            </p>
            <p>
                Las tarjetas con saldo menor a $100 aparecerán aquí.
            </p>
        </field>
    </record>

    <!-- Vista específica para saldo bajo -->
    <record id="view_magnetic_card_tree_low_balance" model="ir.ui.view">
        <field name="name">fuel.magnetic.card.tree.low.balance</field>
        <field name="model">fuel.magnetic.card</field>
        <field name="arch" type="xml">
            <tree string="Tarjetas con Saldo Bajo" 
                  decoration-danger="current_balance &lt; 50"
                  decoration-warning="current_balance &lt; 100">
                <field name="name"/>
                <field name="card_type"/>
                <field name="vehicle_id"/>
                <field name="current_balance" widget="monetary"/>
                <field name="operational_state" widget="badge"/>
                <field name="expiry_date"/>
            </tree>
        </field>
    </record>

    <!-- Acción principal para reporte de saldo de tarjetas -->
    <record id="action_card_balance_report" model="ir.actions.act_window">
        <field name="name">Reporte de Saldo de Tarjetas</field>
        <field name="res_model">fuel.magnetic.card</field>
        <field name="view_mode">pivot,graph,tree,form</field>
        <field name="context">{'search_default_assigned': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay tarjetas disponibles
            </p>
            <p>
                Cree tarjetas magnéticas para ver el reporte de saldos.
            </p>
        </field>
    </record>

    <!-- Vista pivot para reporte general de saldos -->
    <record id="view_card_balance_report_pivot" model="ir.ui.view">
        <field name="name">fuel.magnetic.card.pivot.balance</field>
        <field name="model">fuel.magnetic.card</field>
        <field name="arch" type="xml">
            <pivot string="Reporte de Saldo de Tarjetas">
                <field name="card_type" type="row"/>
                <field name="operational_state" type="col"/>
                <field name="current_balance" type="measure"/>
                <field name="initial_balance" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Vista gráfica para reporte general de saldos -->
    <record id="view_card_balance_report_graph" model="ir.ui.view">
        <field name="name">fuel.magnetic.card.graph.balance</field>
        <field name="model">fuel.magnetic.card</field>
        <field name="arch" type="xml">
            <graph string="Reporte de Saldo de Tarjetas" type="bar">
                <field name="card_type"/>
                <field name="current_balance" type="measure"/>
            </graph>
        </field>
    </record>

</odoo>

