<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_fuel_consumption_report" model="ir.actions.act_window">
        <field name="name">Informe de Consumo de Combustible</field>
        <field name="res_model">fuel.ticket</field>
        <field name="view_mode">pivot,graph,tree,form</field>
        <field name="context">{'search_default_confirmed': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay datos de consumo de combustible disponibles
            </p>
            <p>
                Cree tickets de combustible para ver el informe de consumo.
            </p>
        </field>
    </record>

    <record id="view_fuel_ticket_pivot" model="ir.ui.view">
        <field name="name">fuel.ticket.pivot</field>
        <field name="model">fuel.ticket</field>
        <field name="arch" type="xml">
            <pivot string="Consumo de Combustible" display_quantity="true">
                <field name="date" interval="month" type="row"/>
                <field name="vehicle_id" type="row"/>
                <field name="driver_id" type="row"/>
                <field name="liters" type="measure"/>
                <field name="amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_fuel_ticket_graph" model="ir.ui.view">
        <field name="name">fuel.ticket.graph</field>
        <field name="model">fuel.ticket</field>
        <field name="arch" type="xml">
            <graph string="Consumo de Combustible" type="bar">
                <field name="date" interval="month"/>
                <field name="liters" type="measure"/>
            </graph>
        </field>
    </record>


</odoo>

