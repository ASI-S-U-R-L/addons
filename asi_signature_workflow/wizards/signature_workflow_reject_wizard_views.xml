<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista del wizard de rechazo -->
    <record id="view_signature_workflow_reject_wizard_form" model="ir.ui.view">
        <field name="name">signature.workflow.reject.wizard.form</field>
        <field name="model">signature.workflow.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Rechazar Solicitud de Firma">
                <div class="alert alert-warning" role="alert">
                    <strong>⚠️ Confirmación de Rechazo</strong><br /> Está a punto de rechazar la
                    solicitud de firma. Esta acción notificará al creador de la solicitud. </div>

                <group>
                    <field name="workflow_id" readonly="1" />
                </group>

                <group>
                    <field name="rejection_notes" nolabel="1"
                        placeholder="Explique el motivo del rechazo (requerido)..." />
                </group>

                <footer>
                    <button name="action_confirm_rejection" string="Confirmar Rechazo"
                        type="object" class="btn-danger" />
                    <button string="Cancelar" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>