<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="report_fleet_consumption_test" model="ir.actions.report">
            <field name="name">Prueba del Litro</field>
            <field name="model">fleet.consumption.test</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">fleet_custom.report_consumption_test</field>
            <field name="report_file">fleet_custom.report_consumption_test</field>
            <field name="binding_model_id" ref="model_fleet_consumption_test"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_consumption_test">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2 class="text-center">Prueba del Litro - <span t-field="o.name"/></h2>
                            
                            <div class="row mt32 mb32">
                                <div class="col-6">
                                    <strong>Fecha:</strong> <span t-field="o.date"/><br/>
                                    <strong>Vehículo:</strong> <span t-field="o.vehicle_id.name"/><br/>
                                    <strong>Matrícula:</strong> <span t-field="o.license_plate"/><br/>
                                    <strong>Chofer:</strong> <span t-field="o.driver_id.name"/><br/>
                                </div>
                                <div class="col-6">
                                    <strong>Kilómetros Recorridos:</strong> <span t-field="o.kilometers_traveled"/><br/>
                                    <strong>Combustible Consumido (Litros):</strong> <span t-field="o.fuel_consumed"/><br/>
                                    <strong>Índice Local (Km/L):</strong> <span t-field="o.local_index"/><br/>
                                    <strong>Índice de Territorio (Km/L):</strong> <span t-field="o.territory_index"/><br/>
                                </div>
                            </div>
                            
                            <div class="row mt32 mb32">
                                <div class="col-6">
                                    <strong>Índice de Consumo según Prueba (Transporte):</strong> <span t-field="o.transport_consumption_index"/><br/>
                                    <strong>Índice de Consumo según Prueba (Tecnológico):</strong> <span t-field="o.tech_consumption_index"/><br/>
                                </div>
                                <div class="col-6">
                                    <strong>Lugar:</strong> <span t-field="o.location"/><br/>
                                </div>
                            </div>
                            
                            <h3>Observaciones</h3>
                            <p t-field="o.observations"/>
                            
                            <div class="row mt64">
                                <div class="col-6 text-center">
                                    <p>_______________________</p>
                                    <p>Firma del Conductor</p>
                                </div>
                                <div class="col-6 text-center">
                                    <p>_______________________</p>
                                    <p>Firma del Responsable</p>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
