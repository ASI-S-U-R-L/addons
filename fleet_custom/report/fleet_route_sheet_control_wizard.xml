<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fleet_route_sheet_control_wizard_form" model="ir.ui.view">
        <field name="name">fleet.route.sheet.control.wizard.form</field>
        <field name="model">fleet.route.sheet.control.wizard</field>
        <field name="arch" type="xml">
            <form string="Control de Entrega de HR">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="action_generate_report" string="Generar Reporte" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_fleet_route_sheet_control_wizard" model="ir.actions.act_window">
        <field name="name">Control de Entrega de HR</field>
        <field name="res_model">fleet.route.sheet.control.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_fleet_route_sheet_control_wizard" 
              name="Control de Entrega de HR" 
              parent="fleet.menu_fleet_reporting" 
              action="action_fleet_route_sheet_control_wizard" 
              sequence="10"/>
</odoo>
