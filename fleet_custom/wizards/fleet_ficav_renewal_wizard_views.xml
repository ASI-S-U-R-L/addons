<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fleet_ficav_renewal_wizard_form" model="ir.ui.view">
        <field name="name">fleet.ficav.renewal.wizard.form</field>
        <field name="model">fleet.ficav.renewal.wizard</field>
        <field name="arch" type="xml">
            <form string="Renovar FICAV">
                <sheet>
                    <group>
                        <field name="vehicle_id"/>
                        <field name="current_expiry_date"/>
                        <field name="new_expiry_date"/>
                        <field name="notes"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_renew_ficav" string="Renovar FICAV" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
