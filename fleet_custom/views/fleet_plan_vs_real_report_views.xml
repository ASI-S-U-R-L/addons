<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para el Informe Plan vs Real -->
    <record id="view_fleet_plan_vs_real_report_form" model="ir.ui.view">
        <field name="name">fleet.plan.vs.real.report.form</field>
        <field name="model">fleet.plan.vs.real.report</field>
        <field name="arch" type="xml">
            <form string="Informe Plan vs Real">
                <header>
                    <button name="action_view_data" string="Ver en Pantalla" type="object" class="btn-primary"/>
                    <button name="action_generate_report" string="Generar PDF" type="object" class="btn-secondary" attrs="{'invisible': [('pdf_file', '!=', False)]}"/>
                    <button name="action_print_report" string="Descargar PDF" type="object" class="btn-secondary" attrs="{'invisible': [('pdf_file', '=', False)]}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>Informe Plan vs Real</h1>
                        <h3>Comparación de Consumo de Combustible</h3>
                    </div>
                    
                    <group>
                        <group string="Parámetros del Informe">
                            <field name="company_id"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="vehicle_type"/>
                        </group>
                        <group string="Período">
                            <field name="year"/>
                            <field name="month"/>
                        </group>
                    </group>
                    
                    <notebook attrs="{'invisible': [('plan_vs_real_line_ids', '=', [])]}">
                        <page string="Resultados del Análisis">
                            <field name="plan_vs_real_line_ids" readonly="1">
                                <tree decoration-danger="status == 'Exceso'" 
                                      decoration-success="status == 'Ahorro'" 
                                      decoration-info="status == 'Exacto'">
                                    <field name="vehicle_name"/>
                                    <field name="license_plate"/>
                                    <field name="vehicle_type"/>
                                    <field name="planned_fuel" sum="Total Plan"/>
                                    <field name="real_fuel" sum="Total Real"/>
                                    <field name="difference" sum="Total Diferencia"/>
                                    <field name="compliance_percentage" widget="percentage"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    
                    <group attrs="{'invisible': [('pdf_file', '=', False)]}">
                        <field name="pdf_file" filename="pdf_filename" readonly="1"/>
                        <field name="pdf_filename" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para el Informe Plan vs Real -->
    <record id="action_fleet_plan_vs_real_report" model="ir.actions.act_window">
        <field name="name">Plan vs Real</field>
        <field name="res_model">fleet.plan.vs.real.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Generar informe de comparación Plan vs Real
            </p>
            <p>
                Este informe compara el plan de consumo mensual contra el consumo real de combustible.
            </p>
        </field>
    </record>

    <!-- Menú para el Informe Plan vs Real -->
    <menuitem id="menu_fleet_plan_vs_real_report" 
              name="Plan vs Real" 
              parent="fleet.menu_fleet_reporting" 
              action="action_fleet_plan_vs_real_report" 
              sequence="22"/>
</odoo>
    