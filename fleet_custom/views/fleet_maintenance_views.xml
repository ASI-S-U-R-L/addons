<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para Mantenimientos -->
    <record id="view_fleet_maintenance_form" model="ir.ui.view">
        <field name="name">fleet.maintenance.form</field>
        <field name="model">fleet.maintenance</field>
        <field name="arch" type="xml">
            <form string="Mantenimiento de Vehículo">
                <header>
                    <button name="action_confirm" string="Confirmar" type="object" class="oe_highlight" states="draft"/>
                    <button name="action_start" string="Iniciar" type="object" class="oe_highlight" states="confirmed"/>
                    <button name="action_done" string="Marcar como Realizado" type="object" class="oe_highlight" states="in_progress"/>
                    <button name="action_cancel" string="Cancelar" type="object" states="draft,confirmed,in_progress"/>
                    <button name="action_draft" string="Volver a Borrador" type="object" states="cancelled"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="vehicle_id"/>
                            <field name="date"/>
                            <field name="maintenance_type"/>
                            <field name="is_scheduled"/>
                            <field name="technician_id" options="{'no_create': False}" placeholder="Seleccione o cree el técnico"/>
                        </group>
                        <group>
                            <field name="cost"/>
                            <field name="duration"/>
                            <field name="odometer_before"/>
                            <field name="reset_kilometers" attrs="{'invisible': [('state', '!=', 'in_progress')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Detalles">
                            <group>
                                <field name="cause"/>
                                <field name="description"/>
                                <field name="repair_parts" attrs="{'invisible': [('is_scheduled', '=', True)]}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de árbol para Mantenimientos -->
    <record id="view_fleet_maintenance_tree" model="ir.ui.view">
        <field name="name">fleet.maintenance.tree</field>
        <field name="model">fleet.maintenance</field>
        <field name="arch" type="xml">
            <tree string="Mantenimientos" decoration-info="state=='draft'" decoration-muted="state=='cancelled'" decoration-success="state=='done'" decoration-warning="state=='in_progress'">
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="date"/>
                <field name="maintenance_type"/>
                <field name="is_scheduled"/>
                <field name="technician_id"/>
                <field name="cost" sum="Total"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Vista de búsqueda para Mantenimientos -->
    <record id="view_fleet_maintenance_search" model="ir.ui.view">
        <field name="name">fleet.maintenance.search</field>
        <field name="model">fleet.maintenance</field>
        <field name="arch" type="xml">
            <search string="Buscar Mantenimientos">
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="technician_id"/>
                <filter string="Programados" name="scheduled" domain="[('is_scheduled', '=', True)]"/>
                <filter string="No Programados" name="not_scheduled" domain="[('is_scheduled', '=', False)]"/>
                <filter string="En Borrador" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmados" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="En Progreso" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Realizados" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Cancelados" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Vehículo" name="group_by_vehicle" context="{'group_by': 'vehicle_id'}"/>
                    <filter string="Tipo de Mantenimiento" name="group_by_type" context="{'group_by': 'maintenance_type'}"/>
                    <filter string="Estado" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Técnico" name="group_by_technician" context="{'group_by': 'technician_id'}"/>
                    <filter string="Fecha" name="group_by_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción para Mantenimientos Programados -->
    <record id="action_fleet_maintenance_scheduled" model="ir.actions.act_window">
        <field name="name">Registrar mantenimientos programados</field>
        <field name="res_model">fleet.maintenance</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_is_scheduled': True}</field>
        <field name="domain">[('is_scheduled', '=', True)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea un nuevo mantenimiento programado
            </p>
        </field>
    </record>

    <!-- Acción para Mantenimientos No Programados -->
    <record id="action_fleet_maintenance_unscheduled" model="ir.actions.act_window">
        <field name="name">Registrar mantenimientos no programados</field>
        <field name="res_model">fleet.maintenance</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_is_scheduled': False}</field>
        <field name="domain">[('is_scheduled', '=', False)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea un nuevo mantenimiento no programado
            </p>
        </field>
    </record>

    <!-- Acción para Todos los Mantenimientos (para el informe) -->
    <record id="action_fleet_maintenance_report" model="ir.actions.act_window">
        <field name="name">Informe de Mantenimientos</field>
        <field name="res_model">fleet.maintenance</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'create': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay mantenimientos registrados
            </p>
            <p>
                Este informe muestra todos los mantenimientos registrados con sus detalles y costos.
                Puede imprimir o exportar esta información.
            </p>
        </field>
    </record>

    <!-- Menú para Mantenimientos -->
    <menuitem id="menu_fleet_maintenance_root" 
              name="Mantenimientos" 
              sequence="24" 
              parent="fleet.menu_root"/>

    <!-- Cambiar el nombre del menú de mantenimientos programados -->
    <menuitem id="menu_fleet_maintenance_scheduled" 
              name="Registrar Mantenimiento" 
              parent="menu_fleet_maintenance_root" 
              action="action_fleet_maintenance_scheduled" 
              sequence="1"/>

   

    <!-- Menú para Informe de Mantenimientos -->
    <menuitem id="menu_fleet_maintenance_report" 
              name="Informe de Mantenimientos" 
              parent="fleet.menu_fleet_reporting" 
              action="action_fleet_maintenance_report" 
              sequence="10"/>
</odoo>
