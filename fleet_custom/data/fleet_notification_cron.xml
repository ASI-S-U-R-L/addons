<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron job para verificaciones diarias de notificaciones -->
        <record id="cron_fleet_daily_notifications" model="ir.cron">
            <field name="name">Verificaciones Diarias de Flota</field>
            <field name="model_id" ref="model_fleet_notification_system"/>
            <field name="state">code</field>
            <field name="code">model.run_daily_checks()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
        </record>
    </data>
</odoo>
